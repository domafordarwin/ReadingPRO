<div class="rp-dashboard-container">
  <div class="rp-dashboard-header">
    <div class="rp-header-content">
      <h1>상담 신청 상세보기</h1>
      <p class="rp-subtitle"><%= @consultation_request.student.name %> 학생 상담 신청</p>
    </div>
    <div class="rp-header-actions">
      <%= link_to "목록으로", diagnostic_teacher_consultation_requests_path, class: "rp-btn rp-btn-secondary" %>
    </div>
  </div>

  <!-- 상담 신청 정보 -->
  <div class="rp-section">
    <h2>신청 정보</h2>
    <div class="rp-info-grid">
      <div class="rp-info-item">
        <label>학생명</label>
        <p><strong><%= @consultation_request.student.name %></strong></p>
      </div>
      <div class="rp-info-item">
        <label>학부모</label>
        <p><%= @consultation_request.user.email %></p>
      </div>
      <div class="rp-info-item">
        <label>상담 유형</label>
        <p>
          <span class="rp-badge rp-badge-info"><%= @consultation_request.category_label %></span>
        </p>
      </div>
      <div class="rp-info-item">
        <label>상태</label>
        <p>
          <% case @consultation_request.status %>
            <% when 'pending' %>
              <span class="rp-badge rp-badge-warning">대기 중</span>
            <% when 'approved' %>
              <span class="rp-badge rp-badge-success">승인됨</span>
            <% when 'rejected' %>
              <span class="rp-badge rp-badge-danger">거절됨</span>
            <% when 'completed' %>
              <span class="rp-badge rp-badge-secondary">완료됨</span>
          <% end %>
        </p>
      </div>
      <div class="rp-info-item">
        <label>희망 상담 일정</label>
        <p><%= @consultation_request.scheduled_at.strftime("%Y년 %m월 %d일 %H:%M") %></p>
      </div>
      <div class="rp-info-item">
        <label>신청 일시</label>
        <p><%= @consultation_request.created_at.strftime("%Y년 %m월 %d일 %H:%M:%S") %></p>
      </div>
    </div>
  </div>

  <!-- 상담 신청 내용 -->
  <div class="rp-section">
    <h2>신청 내용</h2>
    <div class="rp-content-box">
      <%= simple_format(@consultation_request.content) %>
    </div>
  </div>

  <!-- 교사 응답 -->
  <% if @responses.any? %>
    <div class="rp-section">
      <h2>교사 응답</h2>
      <% @responses.each do |response| %>
        <div class="rp-response-item">
          <div class="rp-response-header">
            <span class="rp-response-author"><%= response.created_by&.email %></span>
            <span class="rp-response-date"><%= response.created_at.strftime("%Y-%m-%d %H:%M") %></span>
          </div>
          <div class="rp-response-content">
            <%= simple_format(response.content) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- 액션 버튼 -->
  <% if @consultation_request.pending? %>
    <div class="rp-section">
      <div class="rp-action-buttons">
        <%= button_to "승인", approve_diagnostic_teacher_consultation_request_path(@consultation_request),
                      method: :patch, class: "rp-btn rp-btn-success" %>
        <%= button_to "거절", reject_diagnostic_teacher_consultation_request_path(@consultation_request),
                      method: :patch, class: "rp-btn rp-btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

<style>
  .rp-dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .rp-header-content {
    flex: 1;
  }

  .rp-header-actions {
    display: flex;
    gap: 12px;
  }

  .rp-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-top: 16px;
  }

  .rp-info-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .rp-info-item label {
    font-weight: var(--rp-font-weight-semibold);
    font-size: var(--rp-font-size-sm);
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-info-item p {
    margin: 0;
    font-size: var(--rp-font-size-md);
    color: #333;
  }

  .rp-content-box {
    background: #f9f9f9;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 16px;
    line-height: 1.6;
    color: #333;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .rp-response-item {
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 16px;
  }

  .rp-response-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid #ddd;
  }

  .rp-response-author {
    font-weight: var(--rp-font-weight-semibold);
    font-size: var(--rp-font-size-base);
    color: #1976d2;
  }

  .rp-response-date {
    font-size: var(--rp-font-size-xs);
    color: #999;
  }

  .rp-response-content {
    color: #333;
    line-height: 1.6;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .rp-action-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    padding: 24px 0;
    border-top: 1px solid #ddd;
  }

  .rp-btn-success,
  .rp-btn-danger {
    min-width: 120px;
  }
</style>
