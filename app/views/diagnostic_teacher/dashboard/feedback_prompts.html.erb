<% content_for :page_title, "피드백 프롬프트 관리" %>

<div class="rp-page-header">
  <div class="rp-flex rp-items-center rp-justify-between">
    <div>
      <h1 class="rp-page-header__title">피드백 프롬프트 관리</h1>
      <p class="rp-page-header__subtitle">피드백을 정교화하기 위한 프롬프트 템플릿을 관리합니다</p>
    </div>
    <button class="rp-btn rp-btn--primary" id="generate-prompt-btn">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline-block; margin-right: 6px;">
        <path d="M12 5v14M5 12h14"></path>
      </svg>
      프롬프트 생성
    </button>
  </div>
</div>

<!-- 필터 및 검색 -->
<div class="rp-prompt-filter">
  <form method="get" class="rp-filter-form">
    <div class="rp-filter-group">
      <input
        type="text"
        name="search"
        placeholder="프롬프트 검색"
        value="<%= @search_query %>"
        class="rp-filter-input"
      />
      <button type="submit" class="rp-filter-btn">검색</button>
    </div>

    <div class="rp-filter-group">
      <select name="type" class="rp-filter-select" onchange="this.form.submit()">
        <option value="">모든 유형</option>
        <option value="mcq" <%= 'selected' if @type_filter == 'mcq' %>>객관식 (MCQ)</option>
        <option value="constructed" <%= 'selected' if @type_filter == 'constructed' %>>서술형</option>
        <option value="comprehensive" <%= 'selected' if @type_filter == 'comprehensive' %>>종합</option>
      </select>
    </div>

    <div class="rp-filter-group">
      <select name="active" class="rp-filter-select" onchange="this.form.submit()">
        <option value="">모든 상태</option>
        <option value="true" <%= 'selected' if @active_filter == 'true' %>>활성</option>
      </select>
    </div>
  </form>
</div>

<!-- 프롬프트 목록 -->
<div class="rp-prompt-list">
  <% if @prompts.any? %>
    <% @prompts.each do |prompt| %>
      <div class="rp-prompt-card <%= 'rp-prompt-card--template' if prompt.active? %>" id="prompt-card-<%= prompt.id %>">
        <div class="rp-prompt-header">
          <div class="rp-prompt-info">
            <% if prompt.active? %>
              <span class="rp-badge rp-badge--template">활성</span>
            <% else %>
              <span class="rp-badge rp-badge--custom">비활성</span>
            <% end %>
            <% type_label = { 'mcq' => '객관식', 'constructed' => '서술형', 'comprehensive' => '종합' }[prompt.prompt_type] || prompt.prompt_type %>
            <span class="rp-badge rp-badge--category"><%= type_label %></span>
          </div>
          <div class="rp-prompt-actions">
            <button class="rp-icon-btn rp-icon-btn--edit" title="편집"
              onclick="openEditModal(<%= prompt.id %>, '<%= j(prompt.name) %>', '<%= j(prompt.prompt_type) %>', '<%= j(prompt.template) %>', <%= prompt.active? %>)">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
            </button>
            <%= button_to diagnostic_teacher_duplicate_feedback_prompt_path(prompt), class: "rp-icon-btn rp-icon-btn--info", title: "복사", data: { turbo: false } do %>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
            <% end %>
            <%= button_to diagnostic_teacher_destroy_feedback_prompt_path(prompt), method: :delete, class: "rp-icon-btn rp-icon-btn--danger", title: "삭제", data: { turbo: false, turbo_confirm: "'#{prompt.name}' 프롬프트를 삭제하시겠습니까?" }, form: { data: { turbo: false } } do %>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
            <% end %>
          </div>
        </div>

        <div class="rp-prompt-content">
          <h4 style="margin: 0 0 8px 0; font-size: var(--rp-font-size-md); color: #0f172a;"><%= prompt.name %></h4>
          <p class="rp-prompt-text"><%= truncate(prompt.template, length: 200) %></p>
        </div>

        <div class="rp-prompt-footer">
          <span class="rp-prompt-date"><%= prompt.created_at.strftime("%Y-%m-%d") %></span>
          <span class="rp-prompt-usage">
            사용 횟수: <%= prompt.usage_count || 0 %>회
          </span>
        </div>
      </div>
    <% end %>

    <!-- 페이지네이션 -->
    <% if @prompts.respond_to?(:total_pages) && @prompts.total_pages > 1 %>
      <div class="rp-pagination">
        <% if @prompts.prev_page %>
          <%= link_to "이전", diagnostic_teacher_feedback_prompts_path(params.permit(:search, :type, :active, page: @prompts.prev_page)), class: "rp-pagination-btn" %>
        <% end %>

        <% (1..@prompts.total_pages).each do |page| %>
          <% if page == @prompts.current_page %>
            <span class="rp-pagination-number rp-pagination-number--active"><%= page %></span>
          <% else %>
            <%= link_to page, diagnostic_teacher_feedback_prompts_path(params.permit(:search, :type, :active, page: page)), class: "rp-pagination-number" %>
          <% end %>
        <% end %>

        <% if @prompts.next_page %>
          <%= link_to "다음", diagnostic_teacher_feedback_prompts_path(params.permit(:search, :type, :active, page: @prompts.next_page)), class: "rp-pagination-btn" %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
      </svg>
      <p>프롬프트가 없습니다.</p>
    </div>
  <% end %>
</div>

