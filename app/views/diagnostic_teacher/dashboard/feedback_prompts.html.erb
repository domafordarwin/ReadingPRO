<!-- 편집 모달 -->
<div id="edit-prompt-modal" class="rp-modal">
  <div class="rp-modal__overlay" onclick="closeEditModal()"></div>
  <div class="rp-modal__content" style="max-width: 700px;">
    <div class="rp-modal__header">
      <h2 class="rp-modal__title">프롬프트 편집</h2>
      <button class="rp-modal__close" onclick="closeEditModal()">&times;</button>
    </div>
    <form id="edit-prompt-form" method="post" data-turbo="false">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="rp-modal__body">
        <div class="rp-form-group">
          <label class="rp-label">이름 *</label>
          <input type="text" name="feedback_prompt[name]" id="edit-prompt-name" class="rp-filter-input" required style="width:100%;box-sizing:border-box;">
        </div>
        <div class="rp-form-group">
          <label class="rp-label">유형 *</label>
          <select name="feedback_prompt[prompt_type]" id="edit-prompt-type" class="rp-select" required>
            <option value="mcq">객관식 (MCQ)</option>
            <option value="constructed">서술형</option>
            <option value="comprehensive">종합</option>
          </select>
        </div>
        <div class="rp-form-group">
          <label class="rp-label">활성 상태</label>
          <select name="feedback_prompt[active]" id="edit-prompt-active" class="rp-select">
            <option value="true">활성</option>
            <option value="false">비활성</option>
          </select>
        </div>
        <div class="rp-form-group">
          <label class="rp-label">템플릿 내용 *</label>
          <textarea name="feedback_prompt[template]" id="edit-prompt-template" class="rp-textarea" required style="min-height: 300px; font-family: monospace; font-size: var(--rp-font-size-sm); line-height: 1.5;"></textarea>
        </div>
      </div>
      <div class="rp-modal__footer">
        <button type="button" class="rp-btn rp-btn--secondary" onclick="closeEditModal()">취소</button>
        <button type="submit" class="rp-btn rp-btn--primary">저장</button>
      </div>
    </form>
  </div>
</div>

<script>
function openEditModal(id, name, promptType, template, active) {
  var modal = document.getElementById('edit-prompt-modal');
  var form = document.getElementById('edit-prompt-form');
  form.action = '/diagnostic_teacher/feedback_prompts/' + id;
  document.getElementById('edit-prompt-name').value = name;
  document.getElementById('edit-prompt-type').value = promptType;
  document.getElementById('edit-prompt-active').value = active ? 'true' : 'false';
  document.getElementById('edit-prompt-template').value = template;
  modal.classList.add('show');
}

function closeEditModal() {
  document.getElementById('edit-prompt-modal').classList.remove('show');
}
</script>

