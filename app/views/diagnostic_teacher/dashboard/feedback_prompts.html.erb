  const generateBtn = document.getElementById('generate-prompt-btn');
  const closeBtn = document.getElementById('modal-close-btn');
  const cancelBtn = document.getElementById('modal-cancel-btn');
  const overlay = document.getElementById('modal-close');

  const promptGenerateBtn = document.getElementById('prompt-generate-btn');
  const promptSaveBtn = document.getElementById('prompt-save-btn');

  const categorySelect = document.getElementById('prompt-category');
  const descriptionInput = document.getElementById('prompt-description');
  const generatedPromptText = document.getElementById('generated-prompt-text');

  const loadingState = document.getElementById('generation-loading');
  const resultState = document.getElementById('generation-result');
  const errorState = document.getElementById('generation-error');
  const errorMessage = document.getElementById('error-message');

  // 모달 열기
  function openModal() {
    modal.classList.add('show');
    resetForm();
  }

  // 모달 닫기
  function closeModal() {
    modal.classList.remove('show');
  }

  // 폼 초기화
  function resetForm() {
    categorySelect.value = '';
    descriptionInput.value = '';
    generatedPromptText.value = '';
    loadingState.style.display = 'none';
    resultState.style.display = 'none';
    errorState.style.display = 'none';
    promptGenerateBtn.style.display = 'block';
    promptSaveBtn.style.display = 'none';
  }

  // 프롬프트 생성 (AJAX)
  async function generatePrompt() {
    const category = categorySelect.value;
    const description = descriptionInput.value;

    if (!category) {
      showError('카테고리를 선택해주세요');
      return;
    }

    loadingState.style.display = 'flex';
    resultState.style.display = 'none';
    errorState.style.display = 'none';
    promptGenerateBtn.disabled = true;

    try {
      const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
      const response = await fetch('<%= diagnostic_teacher_generate_feedback_prompt_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        },
        body: JSON.stringify({
          category: category,
          description: description
        })
      });

      const data = await response.json();

      if (data.success) {
        showResult(data.prompt_text);
      } else {
        showError(data.error || '프롬프트 생성에 실패했습니다');
      }
    } catch (error) {
      showError('서버 오류: ' + error.message);
    } finally {
      loadingState.style.display = 'none';
      promptGenerateBtn.disabled = false;
    }
  }

  function showResult(promptText) {
    generatedPromptText.value = promptText;
    resultState.style.display = 'block';
    errorState.style.display = 'none';
    promptGenerateBtn.style.display = 'none';
    promptSaveBtn.style.display = 'block';
  }

  function showError(message) {
    errorMessage.textContent = message;
    errorState.style.display = 'block';
    resultState.style.display = 'none';
  }

  // 템플릿으로 저장
  async function savePrompt() {
    const category = categorySelect.value;
    const promptText = generatedPromptText.value;

    if (!promptText) {
      showError('저장할 프롬프트가 없습니다');
      return;
    }

    promptSaveBtn.disabled = true;

    try {
      const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
      const response = await fetch('<%= diagnostic_teacher_save_feedback_prompt_template_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        },
        body: JSON.stringify({
          category: category,
          prompt_text: promptText
        })
      });

      const data = await response.json();

      if (data.success) {
        alert(data.message);
        closeModal();
        // 페이지 새로고침하여 새 템플릿 표시
        window.location.reload();
      } else {
        showError(data.error || '템플릿 저장에 실패했습니다');
      }
    } catch (error) {
      showError('서버 오류: ' + error.message);
    } finally {
      promptSaveBtn.disabled = false;
    }
  }

  // 이벤트 리스너
  generateBtn.addEventListener('click', openModal);
  closeBtn.addEventListener('click', closeModal);
  cancelBtn.addEventListener('click', closeModal);
  overlay.addEventListener('click', closeModal);
  promptGenerateBtn.addEventListener('click', generatePrompt);
  promptSaveBtn.addEventListener('click', savePrompt);
});
</script>
