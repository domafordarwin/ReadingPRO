<% content_for :page_title, "학교 담당자 관리" %>

<div class="rp-page-header" style="display: flex; justify-content: space-between; align-items: flex-start;">
  <div>
    <h1 class="rp-page-header__title">학교 담당자 관리</h1>
    <p class="rp-page-header__subtitle">학교 담당자(school_admin)의 정보를 관리합니다</p>
  </div>
  <%= link_to "새 학교 등록", new_diagnostic_teacher_school_path, class: "rp-btn rp-btn--primary", style: "white-space: nowrap; padding: 10px 16px; border-radius: 6px; font-size: 14px; font-weight: 500; background: #2f5bff; color: white; text-decoration: none;" %>
</div>

<% if flash[:temp_password].present? %>
  <div style="background: #f0fdf4; border: 1px solid #bbf7d0; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
    <h3 style="margin: 0 0 12px 0; color: #166534; font-size: 16px;">학교 관리자 계정이 생성되었습니다</h3>
    <p style="margin: 0 0 8px 0; font-size: 14px; color: #166534;">
      <strong>이메일:</strong> <%= flash[:admin_email] %>
    </p>
    <p style="margin: 0 0 12px 0; font-size: 14px; color: #166534;">
      <strong>임시 비밀번호:</strong>
      <code style="background: white; padding: 4px 8px; border-radius: 4px; font-size: 16px; font-weight: 700; color: #dc2626;"><%= flash[:temp_password] %></code>
    </p>
    <p style="margin: 0; font-size: 12px; color: #15803d;">이 비밀번호를 학교 관리자에게 전달해주세요. 첫 로그인 시 비밀번호 변경이 필요합니다.</p>
  </div>
<% end %>

<!-- 담당자 통계 -->
<div class="rp-stats-grid">
  <div class="rp-stat-card">
    <div class="rp-stat-label">전체 담당자</div>
    <div class="rp-stat-value"><%= @total_managers %></div>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">활성 담당자</div>
    <div class="rp-stat-value rp-stat-value--success"><%= @active_managers_count %></div>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">전체 사용자</div>
    <div class="rp-stat-value"><%= @total_users %></div>
  </div>
</div>

<!-- 담당자 목록 -->
<div class="rp-managers-section">
  <h2 class="rp-section-title">학교 담당자 목록</h2>

  <% if @managers.any? %>
    <table class="rp-table">
      <thead>
        <tr>
          <th>이름</th>
          <th>이메일</th>
          <th>역할</th>
          <th>가입 일시</th>
          <th>상태</th>
        </tr>
      </thead>
      <tbody>
        <% @managers.each do |manager| %>
          <tr>
            <td><strong><%= manager.name %></strong></td>
            <td><%= manager.email %></td>
            <td>
              <span class="rp-role-badge">
                <%= manager.role.upcase %>
              </span>
            </td>
            <td><%= manager.created_at.strftime("%Y-%m-%d") %></td>
            <td>
              <span class="rp-badge rp-badge--active">활성</span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
        <circle cx="9" cy="7" r="4"></circle>
        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
      </svg>
      <p>학교 담당자가 없습니다.</p>
    </div>
  <% end %>
</div>

<!-- 전체 사용자 현황 -->
<div class="rp-users-overview">
  <h2 class="rp-section-title">전체 사용자 현황</h2>

  <div class="rp-roles-grid">
    <% @role_statistics.each do |role, count| %>
      <div class="rp-role-card">
        <div class="rp-role-name"><%= role %></div>
        <div class="rp-role-count"><%= count %></div>
        <div class="rp-role-label">
          <% label_map = {
            "admin" => "시스템 관리자",
            "school_admin" => "학교 담당자",
            "diagnostic_teacher" => "진단담당교사",
            "teacher" => "교사",
            "student" => "학생",
            "parent" => "학부모",
            "researcher" => "연구원"
          } %>
          <%= label_map[role] %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .rp-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .rp-stat-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
  }

  .rp-stat-label {
    font-size: 12px;
    text-transform: uppercase;
    color: #94a3b8;
    font-weight: 600;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }

  .rp-stat-value {
    font-size: 28px;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 4px;
  }

  .rp-stat-value--success {
    color: #10b981;
  }

  .rp-managers-section,
  .rp-users-overview {
    background: white;
    border-radius: 12px;
    padding: 24px;
    border: 1px solid #e2e8f0;
    margin-bottom: 24px;
  }

  .rp-section-title {
    font-size: 18px;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 20px 0;
  }

  .rp-table {
    width: 100%;
    border-collapse: collapse;
  }

  .rp-table thead {
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    border-bottom: 2px solid #e2e8f0;
  }

  .rp-table th {
    padding: 12px 16px;
    text-align: left;
    font-size: 13px;
    font-weight: 600;
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-table td {
    padding: 12px 16px;
    border-bottom: 1px solid #e2e8f0;
    font-size: 14px;
    color: #475569;
  }

  .rp-table tbody tr:hover {
    background: #f8fafc;
  }

  .rp-role-badge {
    display: inline-block;
    padding: 6px 12px;
    background: #e0e7ff;
    color: #3730a3;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
  }

  .rp-badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 500;
  }

  .rp-badge--active {
    background: #d1fae5;
    color: #065f46;
  }

  .rp-roles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 16px;
  }

  .rp-role-card {
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 16px;
    text-align: center;
    background: #f8fafc;
  }

  .rp-role-name {
    font-size: 12px;
    text-transform: uppercase;
    color: #94a3b8;
    font-weight: 600;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }

  .rp-role-count {
    font-size: 24px;
    font-weight: 700;
    color: #2f5bff;
    margin-bottom: 4px;
  }

  .rp-role-label {
    font-size: 12px;
    color: #475569;
  }

  .rp-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    text-align: center;
  }

  .rp-empty-state svg {
    color: #cbd5e1;
    margin-bottom: 16px;
  }

  .rp-empty-state p {
    font-size: 14px;
    color: #94a3b8;
    margin: 0;
  }

  .rp-page-header {
    margin-bottom: 24px;
  }

  .rp-page-header__title {
    font-size: 28px;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 8px 0;
  }

  .rp-page-header__subtitle {
    font-size: 14px;
    color: #94a3b8;
    margin: 0;
  }
</style>
