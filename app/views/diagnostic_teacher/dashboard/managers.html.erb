<% content_for :page_title, "학교 담당자 관리" %>

<div class="rp-page-header" style="display: flex; justify-content: space-between; align-items: flex-start;">
  <div>
    <h1 class="rp-page-header__title">학교 담당자 관리</h1>
    <p class="rp-page-header__subtitle">학교 담당자(school_admin)의 정보를 관리합니다</p>
  </div>
  <%= link_to "새 학교 등록", new_diagnostic_teacher_school_path, class: "rp-btn rp-btn--primary", style: "white-space: nowrap; padding: 10px 16px; border-radius: 6px; font-size: var(--rp-font-size-base); font-weight: 500; background: #2f5bff; color: white; text-decoration: none;" %>
</div>

<% if flash[:temp_password].present? %>
  <div style="background: #f0fdf4; border: 1px solid #bbf7d0; border-radius: 12px; padding: 20px; margin-bottom: 24px;">
    <h3 style="margin: 0 0 12px 0; color: #166534; font-size: var(--rp-font-size-md);">학교 관리자 계정이 생성되었습니다</h3>
    <p style="margin: 0 0 8px 0; font-size: var(--rp-font-size-base); color: #166534;">
      <strong>이메일:</strong> <%= flash[:admin_email] %>
    </p>
    <p style="margin: 0 0 12px 0; font-size: var(--rp-font-size-base); color: #166534;">
      <strong>임시 비밀번호:</strong>
      <code style="background: white; padding: 4px 8px; border-radius: 4px; font-size: var(--rp-font-size-md); font-weight: 700; color: #dc2626;"><%= flash[:temp_password] %></code>
    </p>
    <p style="margin: 0; font-size: var(--rp-font-size-xs); color: #15803d;">이 비밀번호를 학교 관리자에게 전달해주세요. 첫 로그인 시 비밀번호 변경이 필요합니다.</p>
  </div>
<% end %>

<!-- 담당자 통계 (가로 배열) -->
<div class="rp-stats-row">
  <div class="rp-stat-card">
    <div class="rp-stat-label">학교 담당자</div>
    <div class="rp-stat-value"><%= @total_managers %></div>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">등록 학교</div>
    <div class="rp-stat-value"><%= @total_schools %></div>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">전체 학생</div>
    <div class="rp-stat-value rp-stat-value--primary"><%= @total_students %></div>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">전체 학부모</div>
    <div class="rp-stat-value rp-stat-value--success"><%= @total_parents %></div>
  </div>
</div>

<!-- 담당자 목록 -->
<div class="rp-managers-section">
  <h2 class="rp-section-title">학교 담당자 목록</h2>

  <% if @managers.any? %>
    <table class="rp-table">
      <thead>
        <tr>
          <th>이름</th>
          <th>이메일</th>
          <th>역할</th>
          <th>가입 일시</th>
          <th>상태</th>
          <th>관리</th>
        </tr>
      </thead>
      <tbody>
        <% @managers.each do |manager| %>
          <tr>
            <td><strong><%= manager.name.presence || "-" %></strong></td>
            <td><%= manager.email %></td>
            <td>
              <span class="rp-role-badge">
                <%= manager.role.upcase %>
              </span>
            </td>
            <td><%= manager.created_at.strftime("%Y-%m-%d") %></td>
            <td>
              <span class="rp-badge rp-badge--active">활성</span>
            </td>
            <td class="rp-action-cell">
              <div class="rp-action-group">
                <%= link_to edit_diagnostic_teacher_school_admin_path(manager), class: "rp-icon-btn rp-icon-btn--edit", title: "편집" do %>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                <% end %>
                <%= button_to reset_password_diagnostic_teacher_school_admin_path(manager),
                    method: :patch,
                    data: { turbo: false, confirm: "#{manager.name.presence || manager.email}의 비밀번호를 초기화하시겠습니까?" },
                    class: "rp-icon-btn rp-icon-btn--warning",
                    title: "비밀번호 초기화" do %>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                  </svg>
                <% end %>
                <%= button_to diagnostic_teacher_school_admin_path(manager),
                    method: :delete,
                    data: { turbo: false, confirm: "학교 관리자 '#{manager.name.presence || manager.email}'을(를) 삭제하시겠습니까?" },
                    class: "rp-icon-btn rp-icon-btn--danger",
                    title: "삭제" do %>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
        <circle cx="9" cy="7" r="4"></circle>
        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
      </svg>
      <p>학교 담당자가 없습니다.</p>
    </div>
  <% end %>
</div>

<!-- 학교별 학생/학부모 현황 -->
<div class="rp-users-overview">
  <h2 class="rp-section-title">학교별 학생/학부모 현황</h2>

  <% if @schools.any? %>
    <table class="rp-table">
      <thead>
        <tr>
          <th>학교명</th>
          <th>이메일 도메인</th>
          <th>학생 수</th>
          <th>학부모 수</th>
        </tr>
      </thead>
      <tbody>
        <% @schools.each do |school| %>
          <%
            student_count = school.students.count
            parent_count = GuardianStudent.joins(:student).where(students: { school_id: school.id }).distinct.count(:parent_id)
          %>
          <tr>
            <td><strong><%= school.name %></strong></td>
            <td><code class="rp-domain-badge"><%= school.email_domain %></code></td>
            <td><span class="rp-count-badge rp-count-badge--blue"><%= student_count %>명</span></td>
            <td><span class="rp-count-badge rp-count-badge--green"><%= parent_count %>명</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
        <polyline points="9 22 9 12 15 12 15 22"></polyline>
      </svg>
      <p>등록된 학교가 없습니다.</p>
    </div>
  <% end %>
</div>

<style>
  .rp-stats-row {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 32px;
  }

  .rp-stat-card {
    flex: 1;
    min-width: 140px;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
  }

  .rp-stat-label {
    font-size: var(--rp-font-size-xs);
    text-transform: uppercase;
    color: #94a3b8;
    font-weight: 600;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }

  .rp-stat-value {
    font-size: var(--rp-font-size-3xl);
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 4px;
  }

  .rp-stat-value--success {
    color: #10b981;
  }

  .rp-stat-value--primary {
    color: #2f5bff;
  }

  .rp-managers-section,
  .rp-users-overview {
    background: white;
    border-radius: 12px;
    padding: 24px;
    border: 1px solid #e2e8f0;
    margin-bottom: 24px;
  }

  .rp-section-title {
    font-size: var(--rp-font-size-lg);
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 20px 0;
  }

  .rp-table {
    width: 100%;
    border-collapse: collapse;
  }

  .rp-table thead {
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    border-bottom: 2px solid #e2e8f0;
  }

  .rp-table th {
    padding: 12px 16px;
    text-align: left;
    font-size: var(--rp-font-size-sm);
    font-weight: 600;
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-table td {
    padding: 12px 16px;
    border-bottom: 1px solid #e2e8f0;
    font-size: var(--rp-font-size-base);
    color: #475569;
  }

  .rp-table tbody tr:hover {
    background: #f8fafc;
  }

  .rp-role-badge {
    display: inline-block;
    padding: 6px 12px;
    background: #e0e7ff;
    color: #3730a3;
    border-radius: 6px;
    font-size: var(--rp-font-size-xs);
    font-weight: 500;
  }

  .rp-badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: var(--rp-font-size-2xs);
    font-weight: 500;
  }

  .rp-badge--active {
    background: #d1fae5;
    color: #065f46;
  }

  .rp-badge--inactive {
    background: #f1f5f9;
    color: #94a3b8;
  }

  .rp-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    text-align: center;
  }

  .rp-empty-state svg {
    color: #cbd5e1;
    margin-bottom: 16px;
  }

  .rp-empty-state p {
    font-size: var(--rp-font-size-base);
    color: #94a3b8;
    margin: 0;
  }

  .rp-page-header {
    margin-bottom: 24px;
  }

  .rp-page-header__title {
    font-size: var(--rp-font-size-3xl);
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 8px 0;
  }

  .rp-page-header__subtitle {
    font-size: var(--rp-font-size-base);
    color: #94a3b8;
    margin: 0;
  }

  /* 도메인 배지 */
  .rp-domain-badge {
    background: #f1f5f9;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: var(--rp-font-size-xs);
    font-family: 'SF Mono', 'Consolas', monospace;
    color: #475569;
  }

  /* 수치 배지 */
  .rp-count-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: var(--rp-font-size-sm);
    font-weight: 600;
  }

  .rp-count-badge--blue {
    background: #dbeafe;
    color: #1e40af;
  }

  .rp-count-badge--green {
    background: #dcfce7;
    color: #166534;
  }

  /* 액션 버튼 그룹 */
  .rp-action-cell {
    padding: 8px 16px !important;
  }

  .rp-action-group {
    display: flex;
    gap: 6px;
    align-items: center;
  }

  .rp-icon-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .rp-icon-btn svg {
    pointer-events: none;
  }

  .rp-icon-btn--edit {
    background: #eff6ff;
    color: #3b82f6;
  }

  .rp-icon-btn--edit:hover {
    background: #dbeafe;
    box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
  }

  .rp-icon-btn--warning {
    background: #fef3c7;
    color: #d97706;
  }

  .rp-icon-btn--warning:hover {
    background: #fde68a;
    box-shadow: 0 2px 4px rgba(217, 119, 6, 0.2);
  }

  .rp-icon-btn--danger {
    background: #fef2f2;
    color: #dc2626;
  }

  .rp-icon-btn--danger:hover {
    background: #fee2e2;
    box-shadow: 0 2px 4px rgba(220, 38, 38, 0.2);
  }
</style>
