<% content_for :page_title, "응시/채점 현황" %>

<div class="rp-page-header">
  <h1 class="rp-page-header__title">응시/채점 현황</h1>
  <p class="rp-page-header__subtitle">학생들의 진단 응시 및 채점 현황을 확인합니다</p>
</div>

<!-- 통계 카드 -->
<div class="rp-stats-grid">
  <div class="rp-stat-card">
    <div class="rp-stat-label">전체 응시</div>
    <div class="rp-stat-value"><%= @total_attempts %></div>
    <p class="rp-stat-desc">진행 중 및 완료</p>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">진행 중</div>
    <div class="rp-stat-value rp-stat-value--warning"><%= @in_progress_count %></div>
    <p class="rp-stat-desc">미제출</p>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">완료</div>
    <div class="rp-stat-value rp-stat-value--success"><%= @completed_count %></div>
    <p class="rp-stat-desc">제출 완료</p>
  </div>

  <div class="rp-stat-card">
    <div class="rp-stat-label">채점 대기</div>
    <div class="rp-stat-value rp-stat-value--primary"><%= @pending_scoring_count %></div>
    <p class="rp-stat-desc">채점 필요</p>
  </div>
</div>

<!-- 학생별 응시 현황 -->
<div class="rp-attempts-section">
  <h2 class="rp-section-title">학생별 응시 현황</h2>

  <% if @attempts.any? %>
    <table class="rp-table">
      <thead>
        <tr>
          <th>학생</th>
          <th>진단지</th>
          <th>응시 시작</th>
          <th>제출 시간</th>
          <th>상태</th>
          <th>응답 수</th>
          <th>채점</th>
          <th>관리</th>
        </tr>
      </thead>
      <tbody>
        <% @attempts.each do |attempt| %>
          <tr>
            <td><strong><%= attempt.student&.name || "(미지정)" %></strong></td>
            <td><%= attempt.diagnostic_form&.name || "-" %></td>
            <td><%= attempt.started_at&.strftime("%Y-%m-%d %H:%M") || "-" %></td>
            <td><%= attempt.submitted_at&.strftime("%Y-%m-%d %H:%M") || "-" %></td>
            <td>
              <% status_badge = case attempt.status
                 when "in_progress" then '<span class="rp-badge rp-badge--warning">진행 중</span>'
                 when "completed", "submitted" then '<span class="rp-badge rp-badge--success">완료</span>'
                 else '<span class="rp-badge">' + h(attempt.status.to_s) + '</span>'
                 end %>
              <%= sanitize(status_badge, tags: %w[span], attributes: %w[class]) %>
            </td>
            <td><%= attempt.responses.count %></td>
            <td>
              <% scored = attempt.responses.select { |r| r.selected_choice.present? || r.response_rubric_scores.any? }.count %>
              <% total = attempt.responses.count %>
              <span class="rp-progress-text"><%= scored %> / <%= total %></span>
            </td>
            <td>
              <%= button_to diagnostic_teacher_destroy_attempt_path(attempt),
                    method: :delete,
                    data: { turbo_confirm: "#{attempt.student&.name}의 '#{attempt.diagnostic_form&.name}' 진단을 삭제하시겠습니까?\n응답 데이터도 함께 삭제됩니다." },
                    class: "rp-icon-btn rp-icon-btn--danger",
                    title: "삭제" do %>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="3" width="7" height="7"></rect>
        <rect x="14" y="3" width="7" height="7"></rect>
        <rect x="14" y="14" width="7" height="7"></rect>
        <rect x="3" y="14" width="7" height="7"></rect>
      </svg>
      <p>응시 기록이 없습니다.</p>
    </div>
  <% end %>
</div>

<style>
  .rp-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
  }

  .rp-stat-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
  }

  .rp-stat-label {
    font-size: var(--rp-font-size-xs);
    text-transform: uppercase;
    color: #94a3b8;
    font-weight: var(--rp-font-weight-semibold);
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }

  .rp-stat-value {
    font-size: var(--rp-font-size-2xl);
    font-weight: var(--rp-font-weight-bold);
    color: #0f172a;
    margin-bottom: 8px;
  }

  .rp-stat-value--success {
    color: #10b981;
  }

  .rp-stat-value--warning {
    color: #f59e0b;
  }

  .rp-stat-value--primary {
    color: #2f5bff;
  }

  .rp-stat-desc {
    font-size: var(--rp-font-size-sm);
    color: #64748b;
    margin: 0;
  }

  .rp-attempts-section {
    background: white;
    border-radius: 12px;
    padding: 24px;
    border: 1px solid #e2e8f0;
  }

  .rp-section-title {
    font-size: var(--rp-font-size-lg);
    font-weight: var(--rp-font-weight-semibold);
    color: #0f172a;
    margin: 0 0 20px 0;
  }

  .rp-table {
    width: 100%;
    border-collapse: collapse;
  }

  .rp-table thead {
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
    border-bottom: 2px solid #e2e8f0;
  }

  .rp-table th {
    padding: 12px 16px;
    text-align: left;
    font-size: var(--rp-font-size-sm);
    font-weight: var(--rp-font-weight-semibold);
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-table td {
    padding: 12px 16px;
    border-bottom: 1px solid #e2e8f0;
    font-size: var(--rp-font-size-sm);
    color: #475569;
  }

  .rp-table tbody tr:hover {
    background: #f8fafc;
  }

  .rp-table tbody tr:last-child td {
    border-bottom: none;
  }

  .rp-badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: var(--rp-font-size-xs);
    font-weight: var(--rp-font-weight-medium);
  }

  .rp-badge--success {
    background: #d1fae5;
    color: #065f46;
  }

  .rp-badge--warning {
    background: #fef3c7;
    color: #92400e;
  }

  .rp-badge--primary {
    background: #dbeafe;
    color: #1e3a8a;
  }

  .rp-progress-text {
    font-size: var(--rp-font-size-sm);
    color: #64748b;
  }

  .rp-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
    text-align: center;
  }

  .rp-empty-state svg {
    color: #cbd5e1;
    margin-bottom: 16px;
  }

  .rp-empty-state p {
    font-size: var(--rp-font-size-sm);
    color: #94a3b8;
    margin: 0;
  }

  .rp-page-header {
    margin-bottom: 24px;
  }

  .rp-page-header__title {
    font-size: var(--rp-font-size-2xl);
    font-weight: var(--rp-font-weight-bold);
    color: #0f172a;
    margin: 0 0 8px 0;
  }

  .rp-page-header__subtitle {
    font-size: var(--rp-font-size-sm);
    color: #94a3b8;
    margin: 0;
  }
</style>
