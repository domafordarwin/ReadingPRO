<% content_for :portal_title do %>
  보고서 생성
<% end %>
<% content_for :portal_subtitle do %>
  진단 결과를 리포트로 생성합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "diagnostic_teacher/shared/nav", current: :reports %>
<% end %>

<section class="portal-card">
  <h2 class="portal-card-title">보고서 생성</h2>
  <form class="portal-form">
    <label>
      대상 학년
      <select>
        <option selected>2학년</option>
        <option>1학년</option>
        <option>3학년</option>
      </select>
    </label>
    <label>
      보고서 유형
      <select>
        <option selected>종합 리포트</option>
        <option>학급 리포트</option>
        <option>개별 리포트</option>
      </select>
    </label>
    <div class="portal-cta">
      <button type="button" class="portal-button">보고서 생성</button>
      <button type="button" class="portal-button secondary">미리보기</button>
    </div>
  </form>
</section>
