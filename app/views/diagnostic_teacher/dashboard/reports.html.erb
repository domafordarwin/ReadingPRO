<% content_for :portal_title do %>
  진단 결과 관리
<% end %>
<% content_for :portal_subtitle do %>
  학생별 진단 결과 및 리포트를 관리합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "diagnostic_teacher/shared/nav", current: :reports %>
<% end %>

<style>
  .search-bar {
    margin-bottom: 24px;
    display: flex;
    gap: 12px;
  }

  .search-input {
    flex: 1;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: var(--rp-font-size-sm);
  }

  .search-btn {
    padding: 12px 24px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: var(--rp-font-weight-semibold);
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background: #764ba2;
  }

  .results-header {
    font-size: var(--rp-font-size-sm);
    color: #666;
    margin-bottom: 16px;
    font-weight: var(--rp-font-weight-medium);
  }

  .students-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 32px;
  }

  .students-table thead {
    background: #f8f9fa;
    border-bottom: 2px solid #dee2e6;
  }

  .students-table th {
    padding: 16px 12px;
    text-align: left;
    font-weight: var(--rp-font-weight-semibold);
    font-size: var(--rp-font-size-xs);
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .students-table td {
    padding: 16px 12px;
    border-bottom: 1px solid #dee2e6;
    font-size: var(--rp-font-size-sm);
  }

  .students-table tbody tr:last-child td {
    border-bottom: none;
  }

  .students-table tbody tr:hover {
    background: #f8f9fa;
  }

  .student-name {
    font-weight: var(--rp-font-weight-semibold);
    color: #333;
  }

  .attempt-count {
    text-align: center;
    color: #667eea;
    font-weight: var(--rp-font-weight-semibold);
  }

  .completion-badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: var(--rp-font-size-xs);
    font-weight: var(--rp-font-weight-semibold);
  }

  .completion-complete {
    background: #d4edda;
    color: #155724;
  }

  .completion-pending {
    background: #fff3cd;
    color: #856404;
  }

  .action-buttons {
    display: flex;
    gap: 8px;
  }

  .action-btn {
    padding: 8px 12px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: var(--rp-font-size-xs);
    font-weight: var(--rp-font-weight-semibold);
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .action-btn:hover {
    background: #764ba2;
    transform: translateY(-2px);
  }

  .empty-state {
    text-align: center;
    padding: 48px 16px;
    color: #999;
    background: white;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  .empty-state-icon {
    font-size: var(--rp-font-size-2xl);
    margin-bottom: 16px;
  }

  @media (max-width: 768px) {
    .search-bar {
      flex-direction: column;
    }

    .students-table {
      font-size: var(--rp-font-size-xs);
    }

    .students-table th,
    .students-table td {
      padding: 12px 8px;
    }

    .action-buttons {
      flex-direction: column;
    }

    .action-btn {
      width: 100%;
    }
  }
</style>

<!-- 검색 바 -->
<div class="search-bar">
  <form method="get" action="<%= diagnostic_teacher_reports_path %>" style="display: flex; gap: 12px; flex: 1;">
    <input type="text" name="search" class="search-input" placeholder="학생 ID로 검색..." value="<%= @search_query %>">
    <button type="submit" class="search-btn">검색</button>
  </form>
</div>

<% if @students.any? %>
  <div class="results-header">
    총 <%= @students.count %>명의 학생
  </div>

  <!-- 학생 테이블 -->
  <table class="students-table">
    <thead>
      <tr>
        <th style="width: 15%;">학생 ID</th>
        <th style="width: 12%;">진단 횟수</th>
        <th style="width: 15%;">리포트 상태</th>
        <th style="width: 20%;">최근 진단</th>
        <th style="width: 20%;">평균 점수</th>
        <th style="width: 18%;">관리</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <% latest_attempt = student.student_attempts.order(created_at: :desc).first %>
        <% report_status = latest_attempt&.attempt_report&.status || 'none' %>
        <% average_score = @student_scores[student.id] || 0 %>
        <tr>
          <td class="student-name"><%= student.name %></td>
          <td class="attempt-count"><%= student.student_attempts.count %></td>
          <td>
            <% if report_status == 'published' %>
              <span class="completion-badge completion-complete">발행됨</span>
            <% elsif report_status == 'generated' %>
              <span class="completion-badge completion-complete">생성완료</span>
            <% elsif report_status == 'draft' %>
              <span class="completion-badge completion-pending">준비중</span>
            <% else %>
              <span class="completion-badge completion-pending">미생성</span>
            <% end %>
          </td>
          <td><%= latest_attempt&.started_at&.strftime("%Y.%m.%d") || "-" %></td>
          <td><%= average_score %>/100점</td>
          <td>
            <div class="action-buttons">
              <% if latest_attempt %>
                <a href="<%= diagnostic_teacher_show_student_report_path(student.id, attempt_id: latest_attempt.id) %>" class="action-btn">
                  상세보기
                </a>
              <% else %>
                <span style="color: #999; font-size: var(--rp-font-size-xs);">데이터 없음</span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="empty-state">
    <div class="empty-state-icon">📋</div>
    <p><%= @search_query.present? ? "'#{@search_query}'에 대한 검색 결과가 없습니다." : "진행한 진단이 없습니다." %></p>
  </div>
<% end %>
