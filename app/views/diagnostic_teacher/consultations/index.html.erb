<% content_for :page_title, "학생 상담 관리" %>

<div class="rp-page-header">
  <h1 class="rp-page-header__title">학생 상담 관리</h1>
</div>

<!-- 통계 카드 -->
<div class="rp-stats-grid">
  <div class="rp-stat-card">
    <div class="rp-stat-card__label">전체 상담</div>
    <div class="rp-stat-card__value"><%= @total_posts %></div>
  </div>
  <div class="rp-stat-card">
    <div class="rp-stat-card__label">답변 대기</div>
    <div class="rp-stat-card__value rp-stat-card__value--warning"><%= @open_posts_count %></div>
  </div>
  <div class="rp-stat-card">
    <div class="rp-stat-card__label">비공개 상담</div>
    <div class="rp-stat-card__value"><%= @private_posts_count %></div>
  </div>
  <div class="rp-stat-card rp-stat-card--danger">
    <div class="rp-stat-card__label">답변 필요</div>
    <div class="rp-stat-card__value"><%= @needs_reply_count %></div>
  </div>
</div>

<!-- 검색 및 필터 -->
<div class="rp-filter-section">
  <%= form_with url: diagnostic_teacher_consultations_path, method: :get, class: "rp-filter-form", local: true do |f| %>
    <div class="rp-filter-form__row">
      <!-- 검색 -->
      <div class="rp-filter-form__group rp-filter-form__group--search">
        <%= f.text_field :search,
            value: @search_query,
            placeholder: "제목 또는 내용으로 검색",
            class: "rp-input" %>
      </div>

      <!-- 카테고리 필터 -->
      <div class="rp-filter-form__group">
        <%= f.select :category,
            options_for_select(
              [["전체 카테고리", ""]] +
              ConsultationPost::CATEGORY_LABELS.map { |k, v| [v, k] },
              @category_filter
            ),
            {},
            class: "rp-select" %>
      </div>

      <!-- 상태 필터 -->
      <div class="rp-filter-form__group">
        <%= f.select :status,
            options_for_select(
              [["전체 상태", ""], ["답변 대기", "open"], ["답변 완료", "answered"], ["마감", "closed"]],
              @status_filter
            ),
            {},
            class: "rp-select" %>
      </div>

      <div class="rp-filter-form__actions">
        <%= f.submit "검색", class: "rp-btn rp-btn--primary" %>
        <%= link_to "초기화", diagnostic_teacher_consultations_path, class: "rp-btn rp-btn--secondary" %>
      </div>
    </div>
  <% end %>
</div>

<!-- 게시글 목록 -->
<div class="rp-consultation-list">
  <% if @posts.any? %>
    <div class="rp-table-responsive">
      <table class="rp-table">
        <thead>
          <tr>
            <th class="rp-table__th" style="width: 10%;">상태</th>
            <th class="rp-table__th" style="width: 12%;">카테고리</th>
            <th class="rp-table__th" style="width: 8%;">공개</th>
            <th class="rp-table__th" style="width: 35%;">제목</th>
            <th class="rp-table__th" style="width: 10%;">학생</th>
            <th class="rp-table__th" style="width: 8%;">조회</th>
            <th class="rp-table__th" style="width: 12%;">최근 활동</th>
            <th class="rp-table__th" style="width: 5%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr class="rp-table__row <%= 'rp-table__row--highlight' unless post.has_teacher_reply? %>">
              <td class="rp-table__td">
                <% if post.closed? %>
                  <span class="rp-badge rp-badge--gray">마감</span>
                <% elsif post.answered? %>
                  <span class="rp-badge rp-badge--success">답변완료</span>
                <% else %>
                  <span class="rp-badge rp-badge--warning">답변대기</span>
                <% end %>
              </td>
              <td class="rp-table__td">
                <span class="rp-badge rp-badge--outline"><%= post.category_label %></span>
              </td>
              <td class="rp-table__td">
                <% if post.private? %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-label="비공개 게시글">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                  </svg>
                <% else %>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-label="공개 게시글">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 8v4M12 16h.01"></path>
                  </svg>
                <% end %>
              </td>
              <td class="rp-table__td">
                <div class="rp-consultation-title">
                  <%= link_to post.title, diagnostic_teacher_consultation_path(post), class: "rp-link" %>
                  <% if post.consultation_comments.any? %>
                    <span class="rp-badge rp-badge--small rp-badge--info">
                      <%= post.consultation_comments.count %>
                    </span>
                  <% end %>
                  <% unless post.has_teacher_reply? %>
                    <span class="rp-badge rp-badge--small rp-badge--danger">답변필요</span>
                  <% end %>
                </div>
              </td>
              <td class="rp-table__td"><%= post.student.name %></td>
              <td class="rp-table__td"><%= post.views_count %></td>
              <td class="rp-table__td">
                <%= time_ago_in_words(post.last_activity_at) %> 전
              </td>
              <td class="rp-table__td">
                <%= link_to "보기", diagnostic_teacher_consultation_path(post), class: "rp-btn rp-btn--small rp-btn--outline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- 페이지네이션 -->
    <div class="rp-pagination">
      <%= paginate @posts %>
    </div>
  <% else %>
    <div class="rp-empty-state">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
      </svg>
      <h3>상담 게시글이 없습니다</h3>
    </div>
  <% end %>
</div>

<style>
