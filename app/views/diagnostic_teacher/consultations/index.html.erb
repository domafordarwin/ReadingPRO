    padding: 4px 8px;
    border-radius: 6px;
    font-size: var(--rp-font-size-xs);
    font-weight: 600;
  }

  .rp-badge--small {
    padding: 2px 6px;
    font-size: var(--rp-font-size-2xs);
  }

  .rp-badge--success {
    background: #dcfce7;
    color: #15803d;
  }

  .rp-badge--warning {
    background: #fef3c7;
    color: #b45309;
  }

  .rp-badge--info {
    background: #e0f2fe;
    color: #0369a1;
  }

  .rp-badge--danger {
    background: #fee2e2;
    color: #b91c1c;
  }

  .rp-badge--gray {
    background: #f1f5f9;
    color: #64748b;
  }

  .rp-badge--outline {
    background: transparent;
    border: 1px solid #cbd5e1;
    color: #475569;
    padding: 3px 7px;
  }

  .rp-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: var(--rp-font-size-xs);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid transparent;
    transition: all 0.15s;
    white-space: nowrap;
  }

  .rp-btn--primary {
    background: #2f5bff;
    color: white;
  }

  .rp-btn--primary:hover {
    background: #1e4ae8;
  }

  .rp-btn--secondary {
    background: #ffffff;
    color: #475569;
    border-color: #e2e8f0;
  }

  .rp-btn--secondary:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
  }

  .rp-btn--small {
    padding: 6px 12px;
    font-size: var(--rp-font-size-xs);
  }

  .rp-btn--outline {
    background: transparent;
    color: #475569;
    border-color: #e2e8f0;
  }

  .rp-btn--outline:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
  }

  .rp-empty-state {
    text-align: center;
    padding: 48px 24px;
    background: white;
    border-radius: 12px;
  }

  .rp-empty-state svg {
    color: #94a3b8;
    margin-bottom: 16px;
  }

  .rp-empty-state h3 {
    font-size: var(--rp-font-size-lg);
    font-weight: 600;
    color: #0f172a;
    margin: 0;
  }

  .rp-pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
    padding: 16px;
  }

  .rp-input,
  .rp-select {
    padding: 8px 12px;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    font-size: var(--rp-font-size-sm);
  }
</style>
