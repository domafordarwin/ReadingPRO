<div class="rp-tab-pane" data-tab="constructed">
  <% if @constructed_responses.present? && @constructed_responses.any? %>
    <!-- 상단: 통계 + 프롬프트 설정 + 피드백 생성 버튼 -->
    <div class="cr-header">
      <div class="cr-header__info">
        <h2 class="cr-header__title">
          서술형 문항 결과
          <span class="cr-header__count">(<%= @constructed_responses.count %>개 문항)</span>
        </h2>
      </div>
      <div class="cr-header__controls">
        <button class="cr-prompt-toggle-btn" id="cr-prompt-toggle" title="프롬프트 설정">
          <span class="cr-prompt-toggle-btn__icon">&#9881;</span>
          <span>프롬프트 설정</span>
          <span class="cr-prompt-toggle-btn__arrow" id="cr-prompt-arrow">&#9660;</span>
        </button>
        <button class="rp-btn rp-btn--primary" id="generate-constructed-item-feedbacks" data-student-id="<%= @student.id %>">
          서술형 피드백 일괄 생성
        </button>
      </div>
    </div>

    <!-- 프롬프트 설정 (헤더 하단 확장) -->
    <div class="cr-prompt-panel" id="cr-prompt-body" style="display: none;">
      <div class="cr-prompt-panel__inner">
        <div class="cr-prompt-panel__left">
          <label class="cr-prompt-panel__label">프롬프트 분류</label>
          <select id="cr-prompt-category" class="cr-prompt-panel__select">
            <option value="mcq_feedback">객관식 답안 확인 피드백</option>
            <option value="constructed_feedback" selected>서술형 피드백</option>
            <option value="reading_tendency">독서력 피드백</option>
            <option value="comprehensive_report">종합 보고서 생성 프롬프트</option>
          </select>
        </div>
        <div class="cr-prompt-panel__center">
          <label class="cr-prompt-panel__label">피드백 생성 규칙 (AI 지침)</label>
          <textarea class="cr-prompt-panel__textarea" id="cr-prompt-textarea" rows="4"><%= FeedbackAiService::CONSTRUCTED_DEFAULT_PROMPT %></textarea>
        </div>
        <div class="cr-prompt-panel__right">
          <button class="rp-btn rp-btn--secondary rp-btn--sm" id="cr-prompt-reset">기본값 복원</button>
          <p class="cr-prompt-panel__hint">수정 후 "서술형 피드백 일괄 생성"을 누르면 적용됩니다.</p>
        </div>
      </div>
    </div>

    <!-- 문항별 카드 리스트 -->
    <div class="cr-cards">
      <% @constructed_responses.each_with_index do |response, index| %>
        <% item = response.item %>
        <% rubric = item&.rubric %>
        <% criteria = rubric&.rubric_criteria || [] %>
        <% scores = response.response_rubric_scores %>
        <% total_score = scores.sum(&:level_score) %>
        <% max_possible = criteria.sum { |c| c.max_score || c.rubric_levels.maximum(:level) || 0 } %>
        <% existing_feedback = response.response_feedbacks.find { |f| f.feedback_type == "item" || f.source == "ai" } %>

        <div class="cr-card" data-response-id="<%= response.id %>">
          <!-- 카드 헤더 -->
          <div class="cr-card__header">
            <span class="cr-card__number">서술형 <%= index + 1 %></span>
            <% if item.prompt.present? %>
              <span class="cr-card__prompt"><%= truncate(strip_tags(item.prompt), length: 80) %></span>
            <% end %>
            <% if scores.any? %>
              <span class="cr-badge cr-badge--score"><%= total_score %> / <%= max_possible %>점</span>
            <% else %>
              <span class="cr-badge cr-badge--pending">미채점</span>
            <% end %>
          </div>

          <!-- 카드 본문: 3열 -->
          <div class="cr-card__body">
            <!-- 좌측: 채점 기준 + 점수 -->
            <div class="cr-col cr-col--rubric">
              <span class="cr-meta-label">채점 기준 및 점수</span>
              <% if criteria.any? && scores.any? %>
                <div class="cr-rubric-scores">
                  <% criteria.each do |criterion| %>
                    <% score = scores.find { |s| s.rubric_criterion_id == criterion.id } %>
                    <% max_level = criterion.rubric_levels.maximum(:level) || criterion.max_score || 4 %>
                    <div class="cr-rubric-row">
                      <span class="cr-rubric-name"><%= criterion.criterion_name %></span>
                      <span class="cr-rubric-score">
                        <strong><%= score&.level_score || 0 %></strong> / <%= max_level %>
                      </span>
                    </div>
                    <div class="cr-rubric-bar">
                      <div class="cr-rubric-bar__fill" style="width: <%= max_level > 0 ? ((score&.level_score || 0).to_f / max_level * 100).round : 0 %>%"></div>
                    </div>
                  <% end %>
                  <div class="cr-rubric-total">
                    <span>총점</span>
                    <strong><%= total_score %> / <%= max_possible %></strong>
                  </div>
                </div>
              <% elsif criteria.any? %>
                <div class="cr-rubric-scores">
                  <% criteria.each do |criterion| %>
                    <div class="cr-rubric-row">
                      <span class="cr-rubric-name"><%= criterion.criterion_name %></span>
                      <span class="cr-rubric-score cr-rubric-score--pending">미채점</span>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="cr-no-data">루브릭 미설정</p>
              <% end %>

              <% if item.evaluation_indicator %>
                <div class="cr-meta-group" style="margin-top: 12px;">
                  <span class="cr-meta-label">평가영역</span>
                  <span class="cr-indicator-badge"><%= item.evaluation_indicator.name %></span>
                </div>
              <% end %>
            </div>

            <!-- 중앙: 문항 + 학생 답안 -->
            <div class="cr-col cr-col--answer">
              <% if item.stimulus.present? %>
                <div class="cr-stimulus">
                  <span class="cr-meta-label">지문</span>
                  <div class="cr-stimulus__text"><%= truncate(item.stimulus.body, length: 200) %></div>
                </div>
              <% end %>

              <div class="cr-question">
                <span class="cr-meta-label">문항</span>
                <div class="cr-question__text"><%= sanitize_rich_text(item.prompt) %></div>
              </div>

              <div class="cr-student-answer">
                <span class="cr-meta-label">학생 답안</span>
                <div class="cr-student-answer__text"><%= response.answer_text || "(답변 없음)" %></div>
              </div>

              <% if item.model_answer.present? %>
                <div class="cr-model-answer">
                  <span class="cr-meta-label">모범 답안</span>
                  <div class="cr-model-answer__text"><%= item.model_answer %></div>
                </div>
              <% end %>
            </div>

            <!-- 우측: 피드백 영역 -->
            <div class="cr-col cr-col--feedback">
              <span class="cr-meta-label">AI 피드백</span>
              <div class="cr-feedback-display" id="cr-feedback-display-<%= response.id %>">
                <% if existing_feedback %>
                  <div class="cr-feedback-content"><%= simple_format(existing_feedback.feedback) %></div>
                  <span class="cr-feedback-meta">
                    <%= existing_feedback.source == 'ai' ? '✓ AI' : '✓ 교사' %> • <%= existing_feedback.created_at.strftime('%m/%d %H:%M') %>
                  </span>
                <% else %>
                  <p class="cr-feedback-placeholder">상단 버튼으로 피드백을 생성하세요</p>
                <% end %>
              </div>

              <!-- 피드백 편집 영역 -->
              <div class="cr-feedback-edit" id="cr-feedback-edit-<%= response.id %>" style="display: none;">
                <textarea class="cr-feedback-textarea" id="cr-feedback-textarea-<%= response.id %>" rows="8" placeholder="피드백을 편집하세요..."></textarea>
                <div class="cr-feedback-edit__actions">
                  <button class="rp-btn rp-btn--primary rp-btn--sm cr-save-feedback-btn" data-response-id="<%= response.id %>">저장</button>
                  <button class="rp-btn rp-btn--secondary rp-btn--sm cr-cancel-edit-btn" data-response-id="<%= response.id %>">취소</button>
                </div>
              </div>

              <!-- 피드백 액션 버튼 -->
              <div class="cr-feedback-actions" id="cr-feedback-actions-<%= response.id %>">
                <% if existing_feedback %>
                  <button class="rp-btn rp-btn--secondary rp-btn--xs cr-edit-feedback-btn" data-response-id="<%= response.id %>" data-feedback="<%= h(existing_feedback.feedback) %>">수정</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="cr-empty">
      <p>이 학생의 서술형 문항 응답이 없습니다.</p>
    </div>
  <% end %>
</div>

