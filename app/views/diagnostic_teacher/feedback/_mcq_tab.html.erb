    font-size: var(--rp-font-size-sm);
    font-weight: 400;
    color: #64748b;
    margin-left: 8px;
  }
  .mcq-header__controls {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* 프롬프트 토글 버튼 */
