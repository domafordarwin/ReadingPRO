<div class="rp-tab-pane active" data-tab="mcq">
  <% if @responses.present? && @responses.any? %>
    <!-- 상단: 통계 + 프롬프트 설정 + 피드백 생성 버튼 -->
    <div class="mcq-header">
      <div class="mcq-header__info">
        <h2 class="mcq-header__title">
          객관식 문항 결과
          <span class="mcq-header__count">
            (<span id="mcq-correct-count"><%= @responses.count { |r| r.selected_choice&.is_correct? } %></span>/<%= @responses.count %> 정답)
          </span>
        </h2>
      </div>
      <div class="mcq-header__controls">
        <button class="mcq-prompt-toggle-btn" id="mcq-prompt-toggle" title="프롬프트 설정">
          <span class="mcq-prompt-toggle-btn__icon">&#9881;</span>
          <span>프롬프트 설정</span>
          <span class="mcq-prompt-toggle-btn__arrow" id="mcq-prompt-arrow">&#9660;</span>
        </button>
        <button class="rp-btn rp-btn--primary" id="generate-mcq-item-feedbacks" data-student-id="<%= @student.id %>">
          오답 피드백 일괄 생성
        </button>
      </div>
    </div>

    <!-- 프롬프트 설정 (헤더 하단 확장) -->
    <div class="mcq-prompt-panel" id="mcq-prompt-body" style="display: none;">
      <div class="mcq-prompt-panel__inner">
        <div class="mcq-prompt-panel__left">
          <label class="mcq-prompt-panel__label">프롬프트 분류</label>
          <select id="mcq-prompt-category" class="mcq-prompt-panel__select">
            <option value="mcq_feedback" selected>객관식 답안 확인 피드백</option>
            <option value="constructed_feedback">서술형 피드백</option>
            <option value="reading_tendency">독서력 피드백</option>
            <option value="comprehensive_report">종합 보고서 생성 프롬프트</option>
          </select>
        </div>
        <div class="mcq-prompt-panel__center">
          <label class="mcq-prompt-panel__label">피드백 생성 규칙 (AI 지침)</label>
          <textarea class="mcq-prompt-panel__textarea" id="mcq-prompt-textarea" rows="4"><%= FeedbackAiService::MCQ_DEFAULT_PROMPT %></textarea>
        </div>
        <div class="mcq-prompt-panel__right">
          <button class="rp-btn rp-btn--secondary rp-btn--sm" id="mcq-prompt-reset">기본값 복원</button>
          <p class="mcq-prompt-panel__hint">수정 후 "오답 피드백 일괄 생성"을 누르면 적용됩니다.</p>
        </div>
      </div>
    </div>

    <!-- 문항별 카드 리스트 -->
    <div class="mcq-cards">
      <% @responses.each_with_index do |response, index| %>
        <% item = response.item %>
        <% selected = response.selected_choice %>
        <% correct_choice = item.item_choices.find(&:is_correct?) %>
        <% is_correct = selected&.is_correct? %>
        <% existing_feedback = response.response_feedbacks.find { |f| f.feedback_type == "item" || f.source == "ai" } %>

        <div class="mcq-card <%= is_correct ? 'mcq-card--correct' : 'mcq-card--incorrect' %>" data-response-id="<%= response.id %>">
          <!-- 카드 헤더 -->
          <div class="mcq-card__header">
            <span class="mcq-card__number">문항 <%= index + 1 %></span>
            <% if item.prompt.present? %>
              <span class="mcq-card__prompt"><%= truncate(strip_tags(item.prompt), length: 80) %></span>
            <% end %>
            <% if is_correct %>
              <span class="mcq-badge mcq-badge--correct">정답</span>
            <% else %>
              <span class="mcq-badge mcq-badge--incorrect">오답</span>
            <% end %>
          </div>

          <!-- 카드 본문: 3열 -->
          <div class="mcq-card__body">
            <!-- 좌측: 문항 메타 정보 -->
            <div class="mcq-col mcq-col--meta">
              <% if item.evaluation_indicator %>
                <div class="mcq-meta-group">
                  <span class="mcq-meta-label">평가영역</span>
                  <span class="mcq-indicator-badge"><%= item.evaluation_indicator.name %></span>
                </div>
              <% end %>
              <% if item.sub_indicator %>
                <div class="mcq-meta-group">
                  <span class="mcq-meta-label">세부지표</span>
                  <span class="mcq-sub-badge"><%= item.sub_indicator.name %></span>
                </div>
              <% end %>
              <div class="mcq-meta-group">
                <span class="mcq-meta-label">난이도</span>
                <span class="mcq-meta-value"><%= item.difficulty || '미지정' %></span>
              </div>
            </div>

            <!-- 중앙: 답안 비교 + 선택지 -->
            <div class="mcq-col mcq-col--answer">
              <div class="mcq-answer-compare">
                <div class="mcq-answer-box mcq-answer-box--correct">
                  <div class="mcq-answer-box__label">정답</div>
                  <div class="mcq-answer-box__value"><%= correct_choice&.choice_no || '—' %>번</div>
                </div>
                <div class="mcq-answer-box mcq-answer-box--student <%= 'is-correct' if is_correct %>">
                  <div class="mcq-answer-box__label">학생답</div>
                  <div class="mcq-answer-box__value"><%= selected&.choice_no || '—' %>번</div>
                </div>
              </div>

              <!-- 선택지 목록 -->
              <ul class="mcq-choice-list">
                <% item.item_choices.sort_by(&:choice_no).each do |choice| %>
                  <%
                    css_class = ""
                    css_class = "is-correct-choice" if choice.is_correct?
                    css_class = "is-student-wrong" if !is_correct && selected&.id == choice.id
                  %>
                  <li class="mcq-choice-item <%= css_class %>">
                    <span class="mcq-choice-no"><%= choice.choice_no %></span>
                    <span class="mcq-choice-text"><%= sanitize_choice_text(choice.content) %></span>
                    <% if choice.is_correct? %>
                      <span class="mcq-choice-marker">✓</span>
                    <% elsif selected&.id == choice.id %>
                      <span class="mcq-choice-marker">✗</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>

              <!-- 오답인 경우 proximity_reason 표시 -->
              <% if !is_correct && selected&.proximity_reason.present? %>
                <div class="mcq-proximity">
                  <span class="mcq-proximity__label">오답 근접 이유</span>
                  <p class="mcq-proximity__text"><%= selected.proximity_reason %></p>
                </div>
              <% end %>
            </div>

            <!-- 우측: 피드백 영역 -->
            <div class="mcq-col mcq-col--feedback">
              <span class="mcq-meta-label">피드백</span>
              <div class="mcq-feedback-display" id="feedback-display-<%= response.id %>">
                <% if existing_feedback %>
                  <p class="mcq-feedback-text"><%= existing_feedback.feedback %></p>
                  <span class="mcq-feedback-meta">✓ <%= existing_feedback.source %> • <%= existing_feedback.created_at.strftime('%m/%d %H:%M') %></span>
                <% elsif is_correct %>
                  <p class="mcq-feedback-placeholder">정답입니다!</p>
                <% else %>
                  <p class="mcq-feedback-placeholder">상단 버튼으로 피드백을 생성하세요</p>
                <% end %>
              </div>

              <!-- 피드백 편집 영역 (기본 숨김) -->
              <div class="mcq-feedback-edit" id="mcq-feedback-edit-<%= response.id %>" style="display: none;">
                <textarea class="mcq-feedback-textarea" id="mcq-feedback-textarea-<%= response.id %>" rows="5" placeholder="피드백을 편집하세요..."></textarea>
                <div class="mcq-feedback-edit__actions">
                  <button class="rp-btn rp-btn--primary rp-btn--xs mcq-save-feedback-btn" data-response-id="<%= response.id %>">저장</button>
                  <button class="rp-btn rp-btn--secondary rp-btn--xs mcq-cancel-edit-btn" data-response-id="<%= response.id %>">취소</button>
                </div>
              </div>

              <!-- 수정 버튼 -->
              <div class="mcq-feedback-actions" id="mcq-feedback-actions-<%= response.id %>">
                <% if existing_feedback %>
                  <button class="rp-btn rp-btn--secondary rp-btn--xs mcq-edit-feedback-btn" data-response-id="<%= response.id %>" data-feedback="<%= h(existing_feedback.feedback) %>">수정</button>
                <% end %>
              </div>

              <% if item.explanation.present? %>
                <div class="mcq-explanation">
                  <span class="mcq-meta-label">해설</span>
                  <p class="mcq-explanation__text"><%= item.explanation %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="mcq-empty">
      <p>객관식 응답 데이터가 없습니다.</p>
    </div>
  <% end %>
</div>

<style>
