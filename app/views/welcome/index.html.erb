<div class="landing-page">
  <header class="landing-header">
    <div class="landing-container landing-header-inner">
      <div class="landing-logo">
        <div class="landing-logo-main">
          <%= image_tag 'readingpro_logo.png', alt: 'ReadingPRO', class: 'landing-logo-img', style: 'height: 56px; width: auto;' %>
        </div>
      </div>
      <div class="landing-header-actions">
        <div class="landing-toggle" role="group" aria-label="Landing variant toggle">
          <button type="button" class="landing-toggle-button is-active" data-variant="v1">V1</button>
          <button type="button" class="landing-toggle-button" data-variant="v2">V2</button>
        </div>
        <nav class="landing-actions landing-variant landing-variant-flex" data-variant="v1">
          <a class="landing-link" href="<%= login_path %>">로그인</a>
          <a class="landing-button landing-button-outline" href="#">기관용 대시보드</a>
        </nav>
        <nav class="landing-actions landing-variant landing-variant-flex" data-variant="v2">
          <a class="landing-link" href="<%= login_path %>">로그인</a>
          <a class="landing-button landing-button-outline" href="#">무료 샘플 받기</a>
        </nav>
      </div>
    </div>
  </header>

  <!-- 알림 배너 -->
  <% if @announcements.any? %>
    <div class="landing-announcements">
      <div class="landing-container">
        <% @announcements.each do |announcement| %>
          <div class="landing-announcement-item">
            <svg class="landing-announcement-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M10 2h4"></path>
              <path d="M12 14v-4"></path>
              <path d="M4 13a8 8 0 0 1 7.5-8.5"></path>
              <path d="M20 13a8 8 0 0 0-7.5-8.5"></path>
              <circle cx="12" cy="13" r="8"></circle>
              <circle cx="12" cy="18" r="1"></circle>
            </svg>
            <span class="landing-announcement-text"><%= announcement.content %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

