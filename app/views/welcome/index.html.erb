/* Trust */
.lp-trust-grid { display:grid; grid-template-columns:repeat(4,1fr); gap:24px; }
.lp-trust-card { background:#fff; border:1px solid var(--lp-border); border-radius:var(--lp-radius); padding:28px; text-align:center; transition:all var(--lp-tr); }
.lp-trust-card:hover { transform:translateY(-4px); box-shadow:0 8px 28px rgba(0,0,0,.08); }
.lp-trust-card__icon { width:52px; height:52px; border-radius:14px; background:var(--lp-light); display:flex; align-items:center; justify-content:center; margin:0 auto 16px; }
.lp-trust-card h4 { font-size:19px; font-weight:700; color:var(--lp-dark); margin-bottom:8px; }
.lp-trust-card p { font-size:17px; color:var(--lp-muted); line-height:1.5; }
.lp-trust-card code { display:inline-block; margin-top:4px; padding:2px 8px; background:#f1f5f9; border-radius:4px; font-size:14px; color:var(--lp-primary); }
@media(max-width:768px){ .lp-trust-grid{grid-template-columns:repeat(2,1fr);} }
@media(max-width:480px){ .lp-trust-grid{grid-template-columns:1fr;} }

/* CTA */
.lp-cta { background:var(--lp-grad); padding:80px 0; text-align:center; color:#fff; }
.lp-cta h2 { font-size:38px; font-weight:800; margin-bottom:16px; }
.lp-cta p { font-size:19px; opacity:.85; line-height:1.7; margin-bottom:32px; }

/* Footer */
.lp-footer { background:var(--lp-dark); color:rgba(255,255,255,.6); padding-top:60px; }
.lp-footer__inner { display:flex; justify-content:space-between; gap:40px; padding-bottom:40px; border-bottom:1px solid rgba(255,255,255,.1); }
.lp-footer__brand p { font-size:17px; margin-top:12px; max-width:280px; }
.lp-footer__links { display:flex; gap:60px; }
.lp-footer__links h5 { color:#fff; font-size:17px; font-weight:700; margin-bottom:16px; }
.lp-footer__links a { display:block; font-size:17px; color:rgba(255,255,255,.5); text-decoration:none; margin-bottom:10px; transition:color var(--lp-tr); }
.lp-footer__links a:hover { color:#fff; }
.lp-footer__bottom { padding:20px 0; font-size:16px; text-align:center; }
@media(max-width:768px){ .lp-footer__inner{flex-direction:column;} .lp-footer__links{gap:40px;} }

/* Scroll Animations */
.lp-anim { opacity:0; transform:translateY(32px); transition:opacity .7s ease,transform .7s ease; }
.lp-anim.is-visible { opacity:1; transform:translateY(0); }

/* Competency bar animation */
.lp-comp-fill { width:0 !important; transition:width 1s ease .2s; }
.is-visible .lp-comp-fill { width:var(--target-width) !important; }

/* Growth chart bar animation */
.lp-growth-chart__bar { transform:scaleY(0); transform-origin:bottom; transition:transform .8s ease; }
.is-visible .lp-growth-chart__bar { transform:scaleY(1); }

/* Time savings bar animation */
.lp-ts-bar { transform:scaleY(0); transform-origin:bottom; transition:transform .6s ease; }
.is-visible .lp-ts-bar { transform:scaleY(1); }

/* Back to Top */
.lp-back-top { position:fixed; bottom:32px; right:32px; width:44px; height:44px; border-radius:50%; background:var(--lp-grad); color:#fff; border:none; cursor:pointer; display:flex; align-items:center; justify-content:center; box-shadow:0 4px 16px rgba(102,126,234,.4); opacity:0; visibility:hidden; transform:translateY(12px); transition:all .3s ease; z-index:90; }
.lp-back-top.is-visible { opacity:1; visibility:visible; transform:translateY(0); }
.lp-back-top:hover { transform:translateY(-3px); box-shadow:0 8px 24px rgba(102,126,234,.5); }

/* Prefers reduced motion */
@media(prefers-reduced-motion:reduce){ .lp-anim,.lp-comp-fill,.lp-growth-chart__bar,.lp-ts-bar { transition:none !important; } .lp-anim { opacity:1; transform:none; } }
</style>

<script>
(function() {
  /* ── Tab switching ── */
  var tabBtns = document.querySelectorAll('.lp-tabs__btn');
  var tabPanels = document.querySelectorAll('.lp-tabs__panel');
  tabBtns.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var target = btn.dataset.tab;
      tabBtns.forEach(function(b) { b.classList.remove('is-active'); });
      tabPanels.forEach(function(p) { p.classList.remove('is-active'); });
      btn.classList.add('is-active');
      var panel = document.querySelector('[data-panel="' + target + '"]');
      if (panel) panel.classList.add('is-active');
    });
  });

  /* ── Smooth scroll ── */
  document.querySelectorAll('.lp a[href^="#"]').forEach(function(a) {
    a.addEventListener('click', function(e) {
      var target = document.querySelector(a.getAttribute('href'));
      if (target) {
        e.preventDefault();
        var headerH = document.querySelector('.lp-header').offsetHeight || 72;
        var top = target.getBoundingClientRect().top + window.pageYOffset - headerH;
        window.scrollTo({ top: top, behavior: 'smooth' });
      }
      // Close mobile menu after clicking
      var nav = document.getElementById('lp-nav');
      var ham = document.getElementById('lp-hamburger');
      if (nav && ham) { nav.classList.remove('is-open'); ham.classList.remove('is-open'); ham.setAttribute('aria-expanded','false'); }
    });
  });

  /* ── Header shadow ── */
  var header = document.querySelector('.lp-header');

  /* ── Mobile hamburger ── */
  var hamburger = document.getElementById('lp-hamburger');
  var nav = document.getElementById('lp-nav');
  if (hamburger && nav) {
    hamburger.addEventListener('click', function() {
      var open = nav.classList.toggle('is-open');
      hamburger.classList.toggle('is-open');
      hamburger.setAttribute('aria-expanded', open ? 'true' : 'false');
      hamburger.setAttribute('aria-label', open ? '메뉴 닫기' : '메뉴 열기');
    });
  }

  /* ── Scroll-based animations (Intersection Observer) ── */
  var animEls = document.querySelectorAll('.lp-anim');
  if ('IntersectionObserver' in window) {
    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.12 });
    animEls.forEach(function(el) { observer.observe(el); });
  } else {
    animEls.forEach(function(el) { el.classList.add('is-visible'); });
  }

  /* ── Hero stat counter animation ── */
  function animateCounters() {
    document.querySelectorAll('.lp-hero__stat-num[data-count]').forEach(function(el) {
      var target = parseInt(el.dataset.count, 10);
      var suffix = el.dataset.suffix || '';
      var duration = 1200;
      var start = performance.now();
      function step(now) {
        var progress = Math.min((now - start) / duration, 1);
        var ease = 1 - Math.pow(1 - progress, 3);
        var current = Math.round(target * ease);
        el.textContent = current + suffix;
        if (progress < 1) requestAnimationFrame(step);
      }
      requestAnimationFrame(step);
    });
  }
  // Start counters after short delay for page load
  setTimeout(animateCounters, 400);

  /* ── Competency score counter animation ── */
  var compSection = document.getElementById('competencies');
  if (compSection && 'IntersectionObserver' in window) {
    var compObserver = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.querySelectorAll('.lp-comp-score[data-target]').forEach(function(el) {
            var target = parseInt(el.dataset.target, 10);
            var duration = 1000;
            var start = performance.now();
            function step(now) {
              var progress = Math.min((now - start) / duration, 1);
              var ease = 1 - Math.pow(1 - progress, 3);
              el.textContent = Math.round(target * ease) + '%';
              if (progress < 1) requestAnimationFrame(step);
            }
            requestAnimationFrame(step);
          });
          compObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });
    compObserver.observe(compSection);
  }

  /* ── Active nav link highlight on scroll ── */
  var sections = document.querySelectorAll('.lp-section[id]');
  var navLinks = document.querySelectorAll('.lp-header__link');
  var backTopBtn = document.getElementById('lp-back-top');

  function onScroll() {
    var scrollY = window.pageYOffset;
    var headerH = header ? header.offsetHeight : 72;

    // Header shadow
    if (header) header.style.boxShadow = scrollY > 10 ? '0 2px 20px rgba(0,0,0,.08)' : 'none';

    // Back to top button
    if (backTopBtn) {
      if (scrollY > 600) backTopBtn.classList.add('is-visible');
      else backTopBtn.classList.remove('is-visible');
    }

    // Active nav link
    var current = '';
    sections.forEach(function(section) {
      var top = section.offsetTop - headerH - 100;
      if (scrollY >= top) current = section.getAttribute('id');
    });
    navLinks.forEach(function(link) {
      link.classList.remove('is-active');
      if (link.getAttribute('href') === '#' + current) link.classList.add('is-active');
    });
  }

  window.addEventListener('scroll', onScroll, { passive: true });
  onScroll();

  /* ── Back to top ── */
  if (backTopBtn) {
    backTopBtn.addEventListener('click', function() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
})();
</script>
