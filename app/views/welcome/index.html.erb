<style>
  /* 알림 배너 스타일 */
  .landing-announcements {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 12px 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .landing-announcement-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    margin-bottom: 8px;
    color: white;
  }

  .landing-announcement-item:last-child {
    margin-bottom: 0;
  }

  .landing-announcement-icon {
    flex-shrink: 0;
    opacity: 0.9;
  }

  .landing-announcement-text {
    flex: 1;
    font-size: var(--rp-font-size-base);
    line-height: 1.5;
    font-weight: 500;
  }

  .landing-announcement-link {
    display: flex;
    align-items: center;
    gap: 4px;
    color: white;
    font-size: var(--rp-font-size-sm);
    font-weight: 600;
    text-decoration: none;
    padding: 6px 12px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .landing-announcement-link:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .landing-announcement-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .landing-announcement-link {
      width: 100%;
      justify-content: center;
    }
  }

  /* ── 리포트 미리보기 (레이더 + 카드) ── */
  .landing-preview-radar {
    text-align: center;
    margin-bottom: 16px;
  }
  .landing-preview-radar svg {
    max-width: 280px;
    width: 100%;
    height: auto;
  }
  .landing-preview-legend {
    display: flex;
    justify-content: center;
    gap: 14px;
    margin-top: 8px;
    flex-wrap: wrap;
  }
  .landing-preview-legend__item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: var(--rp-font-size-2xs);
    color: #475569;
    font-weight: 500;
  }
  .landing-preview-legend__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
