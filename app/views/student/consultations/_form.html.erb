<div class="rp-form-container">
  <%= form_with model: post, url: url, class: "rp-form", local: true do |f| %>
    <% if post.errors.any? %>
      <div class="rp-alert rp-alert--danger">
        <h4>오류가 발생했습니다:</h4>
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- 카테고리 -->
    <div class="rp-form__group">
      <%= f.label :category, "카테고리", class: "rp-label" %>
      <%= f.select :category,
          options_for_select(
            ConsultationPost::CATEGORY_LABELS.map { |k, v| [v, k] },
            post.category
          ),
          { prompt: "카테고리를 선택하세요" },
          class: "rp-select",
          required: true %>
      <p class="rp-form__help">질문 주제에 맞는 카테고리를 선택하세요.</p>
    </div>

    <!-- 공개 여부 -->
    <div class="rp-form__group">
      <%= f.label :visibility, "공개 설정", class: "rp-label" %>
      <div class="rp-radio-group">
        <label class="rp-radio">
          <%= f.radio_button :visibility, 'private', checked: post.visibility == 'private' || post.new_record? %>
          <span class="rp-radio__label">
            <strong>비공개</strong>
            <small>진단담당교사만 볼 수 있습니다</small>
          </span>
        </label>
        <label class="rp-radio">
          <%= f.radio_button :visibility, 'public' %>
          <span class="rp-radio__label">
            <strong>공개</strong>
            <small>다른 학생들도 볼 수 있습니다</small>
          </span>
        </label>
      </div>
    </div>

    <!-- 제목 -->
    <div class="rp-form__group">
      <%= f.label :title, "제목", class: "rp-label" %>
      <%= f.text_field :title,
          placeholder: "제목을 입력하세요",
          maxlength: 200,
          class: "rp-input",
          required: true %>
    </div>

    <!-- 내용 -->
    <div class="rp-form__group">
      <%= f.label :content, "내용", class: "rp-label" %>
      <%= f.text_area :content,
          placeholder: "내용을 입력하세요",
          rows: 10,
          class: "rp-textarea",
          required: true %>
      <p class="rp-form__help">궁금한 점을 자세히 작성해주세요.</p>
    </div>

    <!-- 작성 안내 -->
    <div class="rp-alert rp-alert--info">
      <h4>작성 가이드</h4>
      <ul>
        <li><strong>비공개 글:</strong> 개인적인 상담이나 진단 결과에 대한 질문에 적합합니다.</li>
        <li><strong>공개 글:</strong> 학습 팁이나 다른 학생에게 도움이 될 수 있는 내용을 공유하세요.</li>
        <li>예의를 지키고 존중하는 태도로 작성해주세요.</li>
      </ul>
    </div>

    <!-- 버튼 -->
    <div class="rp-form__actions">
      <%= f.submit post.new_record? ? "작성하기" : "수정하기", class: "rp-btn rp-btn--primary" %>
      <%= link_to "취소", post.new_record? ? student_consultations_path : student_consultation_path(post),
          class: "rp-btn rp-btn--secondary" %>
    </div>
  <% end %>
</div>

<style>
  .rp-form-container {
    max-width: 100%;
  }

  .rp-form__group {
    margin-bottom: 24px;
  }

  .rp-label {
    display: block;
    font-size: var(--rp-font-size-base);
    font-weight: 500;
    color: #0f172a;
    margin-bottom: 8px;
  }

  .rp-input,
  .rp-select,
  .rp-textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-family: inherit;
    font-size: var(--rp-font-size-base);
    color: #475569;
    background: #ffffff;
    transition: border-color 0.15s;
  }

  .rp-input:focus,
  .rp-select:focus,
  .rp-textarea:focus {
    outline: none;
    border-color: #2f5bff;
    box-shadow: 0 0 0 3px rgba(47, 91, 255, 0.1);
  }

  .rp-textarea {
    min-height: 150px;
    resize: vertical;
  }

  .rp-form__help {
    font-size: var(--rp-font-size-sm);
    color: #94a3b8;
    margin-top: 6px;
  }

  .rp-radio-group {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .rp-radio {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    cursor: pointer;
  }

  .rp-radio input {
    margin-top: 4px;
    cursor: pointer;
  }

  .rp-radio__label {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .rp-radio__label strong {
    font-size: var(--rp-font-size-base);
    font-weight: 500;
    color: #0f172a;
  }

  .rp-radio__label small {
    font-size: var(--rp-font-size-sm);
    color: #94a3b8;
  }

  .rp-alert {
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 16px;
    font-size: var(--rp-font-size-base);
  }

  .rp-alert--info {
    background: #e0f2fe;
    color: #0369a1;
    border: 1px solid #bae6fd;
  }

  .rp-alert h4 {
    margin: 0 0 8px 0;
    font-size: var(--rp-font-size-base);
    font-weight: 600;
  }

  .rp-alert ul {
    margin: 0;
    padding-left: 20px;
  }

  .rp-alert li {
    margin-bottom: 4px;
  }

  .rp-form__actions {
    display: flex;
    gap: 8px;
    margin-top: 24px;
  }

  .rp-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: var(--rp-font-size-base);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.15s;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .rp-btn--primary {
    background: #2f5bff;
    color: white;
  }

  .rp-btn--primary:hover {
    background: #1e4ae8;
  }

  .rp-btn--secondary {
    background: #ffffff;
    color: #475569;
    border-color: #e2e8f0;
  }

  .rp-btn--secondary:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
  }
</style>
