<style>
  /* ========================================
     Diagnostics Dashboard - rp-* Design System
     ======================================== */

  .rp-diagnostics {
    padding: 0;
  }

  /* Header Section */
  .rp-diagnostics__header {
    background: linear-gradient(135deg, var(--rp-primary) 0%, #5340cc 100%);
    color: white;
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 32px;
    box-shadow: 0 4px 12px rgba(47, 91, 255, 0.15);
  }

  .rp-diagnostics__header-title {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 24px 0;
  }

  /* Statistics Grid */
  .rp-diagnostics__stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 16px;
  }

  .rp-stat-card {
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    backdrop-filter: blur(10px);
  }

  .rp-stat-card__number {
    font-size: 32px;
    font-weight: 700;
    color: white;
    margin-bottom: 6px;
  }

  .rp-stat-card__label {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Section Title */
  .rp-diagnostics__section-title {
    font-size: 18px;
    font-weight: 700;
    color: var(--rp-text-title);
    margin: 0 0 20px 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  /* Assessment List Grid */
  .rp-assessment-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
  }

  /* Assessment Card */
  .rp-assessment-card {
    background: white;
    border: 1px solid var(--rp-border);
    border-radius: 12px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
