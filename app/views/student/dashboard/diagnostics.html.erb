  .rp-assessment-card__badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-badge--available {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
  }

  .rp-badge--inprogress {
    background: rgba(245, 158, 11, 0.1);
    color: #d97706;
  }

  .rp-badge--completed {
    background: rgba(59, 130, 246, 0.1);
    color: #2563eb;
  }

  /* Assessment Info */
  .rp-assessment-card__info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    padding: 16px 0;
    border-top: 1px solid var(--rp-border);
    border-bottom: 1px solid var(--rp-border);
  }

  .rp-info-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .rp-info-item__label {
    font-size: 11px;
    font-weight: 600;
    color: var(--rp-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .rp-info-item__value {
    font-size: 14px;
    font-weight: 600;
    color: var(--rp-text-title);
  }

  /* Assessment Actions */
  .rp-assessment-card__actions {
    display: flex;
    gap: 8px;
  }

  .rp-assessment-card__actions .rp-btn {
    flex: 1;
    padding: 10px 12px;
    font-size: 12px;
    font-weight: 600;
  }

  /* Empty State */
  .rp-empty-state {
    background: var(--rp-bg-subtle);
    border: 2px dashed var(--rp-border);
    border-radius: 12px;
    padding: 60px 40px;
    text-align: center;
    color: var(--rp-text-muted);
  }

  .rp-empty-state__icon {
    font-size: 56px;
    margin-bottom: 16px;
    opacity: 0.6;
  }

  .rp-empty-state__title {
    font-size: 18px;
    font-weight: 700;
    color: var(--rp-text-title);
    margin-bottom: 8px;
  }

  .rp-empty-state__message {
    font-size: 13px;
    color: var(--rp-text-muted);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .rp-diagnostics__header {
      padding: 24px;
    }

    .rp-assessment-list {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .rp-diagnostics__header {
      padding: 20px;
      margin-bottom: 24px;
    }

    .rp-diagnostics__header-title {
      font-size: 20px;
      margin-bottom: 16px;
    }

    .rp-diagnostics__stats {
      gap: 12px;
    }

    .rp-stat-card {
      padding: 16px;
    }

    .rp-stat-card__number {
      font-size: 28px;
    }

    .rp-assessment-list {
      grid-template-columns: 1fr;
      gap: 16px;
      margin-bottom: 24px;
    }

    .rp-assessment-card {
      padding: 20px;
    }

    .rp-assessment-card__info {
      gap: 12px;
    }

    .rp-empty-state {
      padding: 40px 20px;
    }

    .rp-empty-state__icon {
      font-size: 48px;
    }

    .rp-empty-state__title {
      font-size: 16px;
    }
  }

  @media (max-width: 480px) {
    .rp-diagnostics__header {
      padding: 16px;
    }

    .rp-diagnostics__header-title {
      font-size: 18px;
    }

    .rp-diagnostics__stats {
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
    }

    .rp-stat-card {
      padding: 12px;
    }

    .rp-stat-card__number {
      font-size: 24px;
    }

    .rp-stat-card__label {
      font-size: 10px;
    }

    .rp-assessment-card__actions {
      flex-direction: column;
    }
  }
</style>

