<% content_for :page_title do %>새 글 작성<% end %>

<!-- Page Header -->
<div class="rp-page-header">
  <h1 class="rp-page-header__title">새 글 작성</h1>
  <p class="rp-page-header__subtitle">부모님들과 경험과 팁을 공유해주세요.</p>
</div>

<!-- Forum Form -->
<div class="rp-card">
  <%= form_with model: @forum, local: true do |f| %>
    <% if @forum.errors.any? %>
      <div class="rp-flash rp-flash--alert">
        <strong><%= @forum.errors.count %>개의 오류가 있습니다:</strong>
        <ul style="margin: 8px 0; padding-left: 20px;">
          <% @forum.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="rp-form-group">
      <%= f.label :title, "제목 *" %>
      <%= f.text_field :title, placeholder: "게시글의 제목을 입력해주세요", class: "rp-input" %>
      <small style="color: #666;">최대 200자</small>
    </div>

    <div class="rp-form-group">
      <%= f.label :category, "카테고리 *" %>
      <%= f.select :category, ParentForum::CATEGORIES.map { |c| [ParentForum::CATEGORY_LABELS[c], c] }, {}, class: "rp-select" %>
    </div>

    <div class="rp-form-group">
      <%= f.label :content, "내용 *" %>
      <%= f.text_area :content, placeholder: "게시글의 내용을 입력해주세요", rows: 10, class: "rp-textarea" %>
    </div>

    <div class="rp-form-group" style="display: flex; gap: 12px; justify-content: flex-end;">
      <%= link_to "취소", parent_forums_path, class: "rp-btn rp-btn--secondary" %>
      <%= f.submit "작성", class: "rp-btn rp-btn--primary" %>
    </div>
  <% end %>
</div>
