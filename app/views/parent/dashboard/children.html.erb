<% content_for :portal_title do %>
  자녀 정보
<% end %>
<% content_for :portal_subtitle do %>
  학생을 검색하고 정보를 확인하세요.
<% end %>
<% content_for :portal_nav do %>
  <%= render "parent/shared/nav", current: :children %>
<% end %>

<section class="portal-card">
  <h2 class="portal-card-title">연결된 학생</h2>

  <% if @students.present? %>
    <div class="portal-list">
      <% @students.each do |student| %>
        <div class="portal-list-item">
          <div>
            <strong><%= student.name %></strong>
            <div class="portal-muted"><%= student.school&.name || "학교" %> <%= student.grade %>학년 · <%= student.class_name %></div>
          </div>
          <span class="portal-chip">연결됨</span>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="color: #94a3b8; padding: 20px; text-align: center;">연결된 학생이 없습니다.</p>
  <% end %>
</section>
