<% content_for :page_title do %>학부모 대시보드<% end %>

<!-- Page Header -->
<div class="rp-page-header">
  <h1 class="rp-page-header__title">학부모 대시보드</h1>
  <p class="rp-page-header__subtitle">자녀의 진단 결과와 학습 흐름을 한눈에 확인하세요.</p>
</div>

<!-- Child Selector -->
<% if @selected_student %>
  <div class="rp-card rp-mb-6">
    <div class="rp-flex rp-items-center rp-justify-between">
      <div class="rp-flex rp-items-center rp-gap-4">
        <div class="rp-avatar" style="width: 48px; height: 48px; font-size: 18px;"><%= @selected_student.name.first %></div>
        <div>
          <h3 style="margin: 0; font-weight: 600; color: var(--rp-text-title);"><%= @selected_student.name %></h3>
          <p class="rp-text-muted" style="margin: 0; font-size: 13px;"><%= @selected_student.school&.name || "학교" %> <%= @selected_student.grade || "학년" %></p>
        </div>
        <span class="rp-badge rp-badge--success">활동 중</span>
      </div>
      <div class="rp-flex rp-gap-2">
        <% if @students.count > 1 %>
          <select class="rp-select" style="width: 180px;" onchange="window.location.href='<%= parent_dashboard_path %>?student_id=' + this.value">
            <% @students.each do |student| %>
              <option value="<%= student.id %>" <%= 'selected' if student.id == @selected_student.id %>>
                <%= student.name %>
              </option>
            <% end %>
          </select>
        <% end %>
        <a href="<%= parent_forums_path %>" class="rp-btn rp-btn--primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg>
          공유 게시판
        </a>
      </div>
    </div>
  </div>
<% end %>

<!-- Stats Grid -->
<div class="rp-grid rp-grid--4 rp-stagger rp-mb-6">
  <div class="rp-stat">
    <div class="rp-stat__label">모니터링 자녀</div>
    <div class="rp-stat__value"><%= @dashboard_stats[:total_children] %></div>
    <div class="rp-stat__trend">명</div>
  </div>
  <div class="rp-stat">
    <div class="rp-stat__label">이번 달 활동</div>
    <div class="rp-stat__value"><%= @dashboard_stats[:active_children] %></div>
    <div class="rp-stat__trend">명</div>
  </div>
  <div class="rp-stat">
    <div class="rp-stat__label">진행된 평가</div>
    <div class="rp-stat__value"><%= @dashboard_stats[:total_assessments] %></div>
    <div class="rp-stat__trend">건</div>
  </div>
  <div class="rp-stat">
    <div class="rp-stat__label">평균 점수</div>
    <div class="rp-stat__value" style="color: var(--rp-primary);"><%= @dashboard_stats[:avg_score] %>%</div>
    <div class="rp-stat__trend">누적</div>
  </div>
</div>

<!-- Children Progress Section -->
<% if @progress_data.any? %>
  <div class="rp-mb-6">
    <h2 style="margin: 0 0 var(--rp-space-4) 0; font-size: var(--rp-font-size-2xl); color: var(--rp-text-title);">자녀 학습 현황</h2>
    <% @progress_data.each do |data| %>
      <div class="rp-card rp-mb-4">
        <div class="rp-card__header">
          <div class="rp-flex rp-items-center rp-justify-between" style="width: 100%;">
            <h3 class="rp-card__title" style="margin: 0;"><%= data[:student].name %></h3>
            <% if data[:trend] == 'improving' %>
              <span class="rp-badge rp-badge--success">📈 상승</span>
            <% elsif data[:trend] == 'declining' %>
              <span class="rp-badge rp-badge--danger">📉 하락</span>
            <% else %>
              <span class="rp-badge rp-badge--default">➡️ 유지</span>
            <% end %>
          </div>
        </div>
        <div class="rp-card__body">
          <div class="rp-grid rp-grid--3 rp-gap-4" style="margin-bottom: var(--rp-space-4);">
            <div>
              <div style="color: var(--rp-text-muted); font-size: var(--rp-font-size-sm); margin-bottom: var(--rp-space-2);">완료한 평가</div>
              <div style="font-size: var(--rp-font-size-2xl); font-weight: 700; color: var(--rp-text-title);"><%= data[:attempt_count] %>건</div>
            </div>

            <% if data[:scores].any? %>
              <div>
                <div style="color: var(--rp-text-muted); font-size: var(--rp-font-size-sm); margin-bottom: var(--rp-space-2);">최근 점수</div>
                <div style="font-size: var(--rp-font-size-2xl); font-weight: 700; color: var(--rp-primary);"><%= data[:scores].last[:score] %>%</div>
              </div>

              <div>
                <div style="color: var(--rp-text-muted); font-size: var(--rp-font-size-sm); margin-bottom: var(--rp-space-2);">평균 점수</div>
                <div style="font-size: var(--rp-font-size-2xl); font-weight: 700; color: var(--rp-success);"><%= (data[:scores].sum { |s| s[:score] } / data[:scores].count).round(1) %>%</div>
              </div>
            <% end %>
          </div>

          <!-- Mini Chart -->
          <% if data[:scores].count >= 2 %>
            <div class="rp-mini-chart">
              <% max_score = data[:scores].map { |s| s[:score] }.max %>
              <% data[:scores].last(10).each do |score| %>
                <div class="rp-mini-chart__bar"
                     style="height: <%= (score[:score] / max_score * 100).round %>%"
                     title="<%= score[:date].strftime('%m/%d') %>: <%= score[:score] %>%"></div>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="rp-card__footer">
          <%= link_to "자세히 보기", parent_reports_path(student_id: data[:student].id), class: "rp-btn rp-btn--secondary rp-btn--sm" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Recent Activity -->
<div class="rp-card rp-mb-6">
  <div class="rp-card__header">
    <h3 class="rp-card__title">최근 활동</h3>
  </div>
  <div class="rp-card__body">
    <% if @recent_activities.any? %>
      <div class="rp-activity-feed">
        <% @recent_activities.each do |activity| %>
          <div class="rp-activity-item rp-mb-4">
            <div class="rp-flex rp-items-start rp-gap-3">
              <div class="rp-activity-icon" style="flex-shrink: 0;">
                <% if activity[:type] == 'assessment' %>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 11l3 3L22 4"></path>
                    <path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                <% else %>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                  </svg>
                <% end %>
              </div>
              <div style="flex: 1;">
                <div style="font-weight: 600; color: var(--rp-text-title);">
                  <strong><%= activity[:student].name %></strong> - <%= activity[:title] %>
                </div>
                <% if activity[:score] %>
                  <div style="color: var(--rp-primary); font-size: var(--rp-font-size-sm); margin-top: var(--rp-space-1);">
                    점수: <%= activity[:score] %>
                  </div>
                <% elsif activity[:status] %>
                  <div style="margin-top: var(--rp-space-1);">
                    <% if activity[:status] == 'pending' %>
                      <span class="rp-badge rp-badge--warning">대기중</span>
                    <% elsif activity[:status] == 'approved' %>
                      <span class="rp-badge rp-badge--success">승인됨</span>
                    <% elsif activity[:status] == 'rejected' %>
                      <span class="rp-badge rp-badge--danger">거절됨</span>
                    <% else %>
                      <span class="rp-badge rp-badge--default"><%= activity[:status].titleize %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div style="color: var(--rp-text-muted); font-size: var(--rp-font-size-sm); white-space: nowrap;">
                <%= time_ago_in_words(activity[:timestamp]) %> 전
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="rp-text-muted">최근 활동이 없습니다.</p>
    <% end %>
  </div>
</div>

<!-- Info Banner -->
<div class="rp-ai-coach">
  <div class="rp-ai-coach__header">
    <svg class="rp-ai-coach__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"></circle>
      <path d="M12 16v-4M12 8h.01"></path>
    </svg>
    <span class="rp-ai-coach__title">ReadingPRO 안내</span>
  </div>
  <div class="rp-ai-coach__content">
    AI 기반 진단과 맞춤형 피드백으로 자녀의 읽기 성장을 지원합니다.
    정기적인 진단 참여와 결과 확인을 통해 자녀의 독서 역량 변화를 추적해보세요.
  </div>
  <div class="rp-ai-coach__actions">
    <a href="/parent/reports" class="rp-btn rp-btn--primary rp-btn--sm">리포트 확인</a>
    <a href="#" class="rp-btn rp-btn--secondary rp-btn--sm">도움말</a>
  </div>
</div>
