<% content_for :portal_title do %>
  새 지문 등록
<% end %>
<% content_for :portal_subtitle do %>
  새로운 읽기 지문을 등록합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :passages %>
<% end %>

<section class="portal-card">
  <h2 class="portal-card-title">지문 정보</h2>

  <%= form_with model: @stimulus, url: researcher_stimuli_path, method: :post, local: true do |f| %>
    <% if @stimulus.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@stimulus.errors.count, "error") %> prohibited this stimulus from being saved:</h4>
        <ul>
          <% @stimulus.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for="stimulus_title">지문 제목 <span class="text-danger">*</span></label>
      <%= f.text_field :title, id: "stimulus_title", placeholder: "예: 독서 능력의 발달", class: "form-control", required: true %>
      <small class="form-text">지문을 식별할 수 있는 명확한 제목을 입력하세요.</small>
    </div>

    <div class="form-group">
      <label for="stimulus_body">지문 본문 <span class="text-danger">*</span></label>
      <%= f.text_area :body, id: "stimulus_body", placeholder: "지문의 전체 내용을 입력하세요...", class: "form-control", rows: 15, required: true %>
      <small class="form-text">학생들이 읽게 될 전체 지문을 입력하세요.</small>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="stimulus_source">출처</label>
        <%= f.text_field :source, id: "stimulus_source", placeholder: "예: 국어 교과서 5학년 1학기", class: "form-control" %>
        <small class="form-text">지문의 출처를 입력하세요 (선택사항).</small>
      </div>

      <div class="form-group">
        <label for="stimulus_reading_level">읽기 수준</label>
        <%= f.select :reading_level,
          options_for_select([
            ['초등', 'elementary'],
            ['중등', 'middle'],
            ['고등', 'high']
          ], @stimulus.reading_level),
          { include_blank: '선택하세요' },
          { id: "stimulus_reading_level", class: "form-control" } %>
        <small class="form-text">대상 학년군을 선택하세요.</small>
      </div>

      <div class="form-group">
        <label for="stimulus_word_count">단어 수</label>
        <%= f.number_field :word_count, id: "stimulus_word_count", placeholder: "예: 500", class: "form-control", min: 0 %>
        <small class="form-text">지문의 총 단어 수를 입력하세요 (선택사항).</small>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "등록", class: "btn btn-primary" %>
      <%= link_to "취소", researcher_passages_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</section>

<style>
  .form-group {
    margin-bottom: 24px;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .form-text {
    display: block;
    margin-top: 6px;
    font-size: 12px;
    color: #666;
  }

  .text-danger {
    color: #dc3545;
  }

  .form-control {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: 14px;
    font-family: inherit;
  }

  .form-control:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 16px;
  }

  .form-actions {
    display: flex;
    gap: 12px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #e0e0e0;
  }

  .btn {
    padding: 10px 24px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-primary {
    background: #667eea;
    color: white;
  }

  .btn-primary:hover {
    background: #764ba2;
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    border: 1px solid #667eea;
  }

  .btn-secondary:hover {
    background: #f8f9ff;
  }

  .alert {
    padding: 16px;
    margin-bottom: 24px;
    border-radius: 6px;
  }

  .alert-danger {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .alert h4 {
    margin: 0 0 12px 0;
    font-size: 14px;
    font-weight: 600;
  }

  .alert ul {
    margin: 0;
    padding-left: 20px;
  }

  .alert li {
    font-size: 13px;
    margin-bottom: 4px;
  }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
