<% content_for :portal_title do %>
  새 지문 등록
<% end %>
<% content_for :portal_subtitle do %>
  새로운 읽기 지문을 등록합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :passages %>
<% end %>

<section class="portal-card">
  <h2 class="portal-card-title">지문 정보</h2>

  <%= form_with model: @stimulus, url: researcher_stimuli_path, method: :post, data: { turbo: false }, multipart: true do |f| %>
    <% if @stimulus.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@stimulus.errors.count, "error") %> prohibited this stimulus from being saved:</h4>
        <ul>
          <% @stimulus.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for="stimulus_title">지문 제목 <span class="text-danger">*</span></label>
      <%= f.text_field :title, id: "stimulus_title", placeholder: "예: 독서 능력의 발달", class: "form-control", required: true %>
      <small class="form-text">지문을 식별할 수 있는 명확한 제목을 입력하세요.</small>
    </div>

    <div class="form-group">
      <label for="stimulus_body">지문 본문 <span class="text-danger">*</span></label>
      <small class="form-text" style="margin-bottom: 6px;">
        <strong>굵게</strong>, <em>기울임</em>, <u>밑줄</u> 서식을 적용할 수 있습니다. (Ctrl+B / Ctrl+I / Ctrl+U)
      </small>
      <div class="rp-editor-toolbar" style="display: flex; gap: 4px; padding: 6px 8px; background: #f8fafc; border: 1px solid #e0e0e0; border-bottom: none; border-radius: 6px 6px 0 0;">
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('bold')" title="굵게 (Ctrl+B)"><strong>B</strong></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('italic')" title="기울임 (Ctrl+I)"><em>I</em></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('underline')" title="밑줄 (Ctrl+U)"><u>U</u></button>
        <span style="border-left: 1px solid #e0e0e0; margin: 0 4px;"></span>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('strikeThrough')" title="취소선"><s>S</s></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('removeFormat')" title="서식 제거" style="font-size: var(--rp-font-size-2xs);">✕</button>
      </div>
      <div contenteditable="true"
           id="body-editor"
           class="form-control"
           style="min-height: 300px; line-height: 1.8; font-size: var(--rp-font-size-base); border-radius: 0 0 6px 6px; border-top: none; outline: none; overflow-y: auto;"
           oninput="syncBody()"
           onfocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 3px rgba(102, 126, 234, 0.1)'"
           onblur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none'"
           data-placeholder="지문의 전체 내용을 입력하세요..."></div>
      <%= f.hidden_field :body, id: "stimulus_body_hidden" %>
    </div>

    <!-- 이미지 첨부 -->
    <div class="form-group">
      <label>지문 이미지</label>
      <small class="form-text" style="margin-bottom: 8px;">지문에 포함될 이미지를 첨부하세요 (여러 장 가능).</small>
      <input type="file" name="reading_stimulus[images][]" accept="image/*" multiple class="form-control" style="padding: 8px;">
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="stimulus_source">출처</label>
        <%= f.text_field :source, id: "stimulus_source", placeholder: "예: 국어 교과서 5학년 1학기", class: "form-control" %>
        <small class="form-text">지문의 출처를 입력하세요 (선택사항).</small>
      </div>

      <div class="form-group">
        <label for="stimulus_reading_level">읽기 수준</label>
        <%= f.select :reading_level,
          options_for_select([
            ['초등', 'elementary'],
            ['중등', 'middle'],
            ['고등', 'high']
          ], @stimulus.reading_level),
          { include_blank: '선택하세요' },
          { id: "stimulus_reading_level", class: "form-control" } %>
        <small class="form-text">대상 학년군을 선택하세요.</small>
      </div>

      <div class="form-group">
        <label for="stimulus_word_count">단어 수</label>
        <%= f.number_field :word_count, id: "stimulus_word_count", placeholder: "예: 500", class: "form-control", min: 0 %>
        <small class="form-text">지문의 총 단어 수를 입력하세요 (선택사항).</small>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "등록", class: "btn btn-primary", onclick: "syncBody()" %>
      <%= link_to "취소", researcher_passages_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</section>

<style>
  .form-group {
    margin-bottom: 24px;
  }

  .form-group label {
    display: block;
    font-weight: var(--rp-font-weight-semibold);
    color: #333;
    margin-bottom: 8px;
    font-size: var(--rp-font-size-base);
  }

  .form-text {
    display: block;
    margin-top: 6px;
    font-size: var(--rp-font-size-xs);
    color: #666;
  }

  .text-danger {
    color: #dc3545;
  }

  .form-control {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: var(--rp-font-size-base);
    font-family: inherit;
  }

  .form-control:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-row {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 16px;
  }

  .form-actions {
    display: flex;
    gap: 12px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid #e0e0e0;
  }

  .btn {
    padding: 10px 24px;
    border: none;
    border-radius: 6px;
    font-weight: var(--rp-font-weight-semibold);
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn-primary {
    background: #667eea;
    color: white;
  }

  .btn-primary:hover {
    background: #764ba2;
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    border: 1px solid #667eea;
  }

  .btn-secondary:hover {
    background: #f8f9ff;
  }

  .alert {
    padding: 16px;
    margin-bottom: 24px;
    border-radius: 6px;
  }

  .alert-danger {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .alert h4 {
    margin: 0 0 12px 0;
    font-size: var(--rp-font-size-base);
    font-weight: var(--rp-font-weight-semibold);
  }

  .alert ul {
    margin: 0;
    padding-left: 20px;
  }

  .alert li {
    font-size: var(--rp-font-size-sm);
    margin-bottom: 4px;
  }

  .rp-fmt-btn {
    background: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    padding: 2px 8px;
    cursor: pointer;
    font-size: var(--rp-font-size-sm);
    line-height: 1.4;
    color: #334155;
    min-width: 28px;
    text-align: center;
  }
  .rp-fmt-btn:hover { background: #e2e8f0; }

  #body-editor u { text-decoration: underline; }
  #body-editor b, #body-editor strong { font-weight: var(--rp-font-weight-bold); }
  #body-editor i, #body-editor em { font-style: italic; }
  #body-editor s { text-decoration: line-through; }

  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function syncBody() {
    const editor = document.getElementById('body-editor');
    const hidden = document.getElementById('stimulus_body_hidden');
    if (editor && hidden) hidden.value = editor.innerHTML;
  }

  function fmtCmd(cmd) {
    const editor = document.getElementById('body-editor');
    if (editor) {
      editor.focus();
      document.execCommand(cmd, false, null);
      syncBody();
    }
  }

  // Reliable sync via click delegation (fires BEFORE submit event)
  document.addEventListener('click', function(e) {
    var btn = e.target.closest('button[type="submit"], input[type="submit"]');
    if (btn) syncBody();
  }, true);

  // Also sync on form submit event (safety net)
  document.addEventListener('submit', function() { syncBody(); }, true);

  document.addEventListener('keydown', function(e) {
    if (e.target.id !== 'body-editor') return;
    if (e.ctrlKey || e.metaKey) {
      if (e.key === 'b') { e.preventDefault(); document.execCommand('bold'); syncBody(); }
      if (e.key === 'i') { e.preventDefault(); document.execCommand('italic'); syncBody(); }
      if (e.key === 'u') { e.preventDefault(); document.execCommand('underline'); syncBody(); }
    }
  });
</script>
