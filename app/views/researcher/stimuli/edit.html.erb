    border-radius: 6px;
  }

  .alert-danger {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .alert h4 {
    margin: 0 0 12px 0;
    font-size: 14px;
    font-weight: 600;
  }

