<% content_for :portal_title do %>
  지문 수정
<% end %>
<% content_for :portal_subtitle do %>
  선택한 지문의 내용을 수정합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :passages %>
<% end %>

<section class="portal-card">
  <h2 class="portal-card-title">지문 정보</h2>

  <%= form_with model: @stimulus, url: researcher_stimulus_path(@stimulus), method: :patch, data: { turbo: false }, multipart: true do |f| %>
    <% if @stimulus.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@stimulus.errors.count, "error") %> prohibited this stimulus from being saved:</h4>
        <ul>
          <% @stimulus.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for="stimulus_title">지문 제목 <span class="text-danger">*</span></label>
      <%= f.text_field :title, id: "stimulus_title", placeholder: "예: 독서 능력의 발달", class: "form-control", required: true %>
      <small class="form-text">지문을 식별할 수 있는 명확한 제목을 입력하세요.</small>
    </div>

    <div class="form-group">
      <label for="stimulus_body">지문 본문 <span class="text-danger">*</span></label>
      <small class="form-text" style="margin-bottom: 6px;">
        <strong>굵게</strong>, <em>기울임</em>, <u>밑줄</u> 서식을 적용할 수 있습니다. (Ctrl+B / Ctrl+I / Ctrl+U)
      </small>
      <div class="rp-editor-toolbar" style="display: flex; gap: 4px; padding: 6px 8px; background: #f8fafc; border: 1px solid #e0e0e0; border-bottom: none; border-radius: 6px 6px 0 0;">
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('bold')" title="굵게 (Ctrl+B)"><strong>B</strong></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('italic')" title="기울임 (Ctrl+I)"><em>I</em></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('underline')" title="밑줄 (Ctrl+U)"><u>U</u></button>
        <span style="border-left: 1px solid #e0e0e0; margin: 0 4px;"></span>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('strikeThrough')" title="취소선"><s>S</s></button>
        <button type="button" class="rp-fmt-btn" onmousedown="event.preventDefault()" onclick="fmtCmd('removeFormat')" title="서식 제거" style="font-size: 11px;">✕</button>
      </div>
      <div contenteditable="true"
           id="body-editor"
           class="form-control"
           style="min-height: 300px; line-height: 1.8; font-size: 14px; border-radius: 0 0 6px 6px; border-top: none; outline: none; overflow-y: auto;"
           oninput="syncBody()"
           onfocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 3px rgba(102, 126, 234, 0.1)'"
           onblur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none'"><%= raw @stimulus.body %></div>
      <%= f.hidden_field :body, id: "stimulus_body_hidden" %>
    </div>

    <!-- 이미지 관리 -->
    <div class="form-group">
      <label>지문 이미지</label>
      <small class="form-text" style="margin-bottom: 8px;">지문에 포함될 이미지를 첨부하세요 (여러 장 가능).</small>
      <input type="file" name="reading_stimulus[images][]" accept="image/*" multiple class="form-control" style="padding: 8px;">
      <% if @stimulus.images.attached? %>
        <div style="display: flex; gap: 12px; flex-wrap: wrap; margin-top: 12px;">
          <% @stimulus.images.each do |img| %>
            <div style="position: relative; border: 1px solid #e0e0e0; border-radius: 8px; overflow: hidden;">
              <%= image_tag img, style: "max-width: 200px; max-height: 140px; display: block;" %>
              <label style="display: flex; align-items: center; gap: 4px; padding: 4px 8px; font-size: 12px; color: #ef4444; cursor: pointer; background: #fff;">
                <input type="checkbox" name="remove_image_ids[]" value="<%= img.id %>" style="width: 13px; height: 13px;">
                삭제
              </label>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="stimulus_source">출처</label>
        <%= f.text_field :source, id: "stimulus_source", placeholder: "예: 국어 교과서 5학년 1학기", class: "form-control" %>
        <small class="form-text">지문의 출처를 입력하세요 (선택사항).</small>
      </div>

      <div class="form-group">
        <label for="stimulus_reading_level">읽기 수준</label>
        <%= f.select :reading_level,
          options_for_select([
            ['초등', 'elementary'],
            ['중등', 'middle'],
            ['고등', 'high']
          ], @stimulus.reading_level),
          { include_blank: '선택하세요' },
          { id: "stimulus_reading_level", class: "form-control" } %>
        <small class="form-text">대상 학년군을 선택하세요.</small>
      </div>

      <div class="form-group">
        <label for="stimulus_word_count">단어 수</label>
        <%= f.number_field :word_count, id: "stimulus_word_count", placeholder: "예: 500", class: "form-control", min: 0 %>
        <small class="form-text">지문의 총 단어 수를 입력하세요 (선택사항).</small>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "저장", class: "btn btn-primary", onclick: "syncBody()" %>
      <%= link_to "취소", researcher_passages_path, class: "btn btn-secondary" %>
      <%= link_to "삭제", researcher_stimulus_path(@stimulus), data: { turbo_method: :delete, turbo_confirm: "정말로 이 지문을 삭제하시겠습니까? 연결된 문항도 영향을 받을 수 있습니다." }, class: "btn btn-danger" %>
    </div>
  <% end %>
</section>

<% if @stimulus.items.any? %>
  <section class="portal-card" style="margin-top: 24px;">
    <h3 class="portal-card-title">연결된 문항 (<%= @stimulus.items_count || @stimulus.items.count %>개)</h3>
    <div class="connected-items">
      <% @stimulus.items.limit(5).each do |item| %>
        <div class="connected-item">
          <span class="connected-item__code"><%= item.code || "##{item.id}" %></span>
          <span class="connected-item__prompt"><%= truncate(strip_tags(item.prompt), length: 80) %></span>
          <%= link_to "편집", edit_researcher_item_path(item), class: "connected-item__action" %>
        </div>
      <% end %>
      <% if @stimulus.items.count > 5 %>
        <div class="connected-item-more">
          외 <%= @stimulus.items.count - 5 %>개 문항
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<style>
