    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    align-items: center;
    justify-content: center;
  }

  .delete-loading.active {
    display: flex;
  }

  .delete-loading__content {
    background: white;
    padding: 32px 48px;
    border-radius: 8px;
