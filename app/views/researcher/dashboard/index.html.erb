<% content_for :portal_title do %>
  대시보드
<% end %>
<% content_for :portal_subtitle do %>
  문항 개발 현황과 최근 활동을 확인하세요.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :dashboard %>
<% end %>

<style>
  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .dashboard-actions {
    display: flex;
    gap: 12px;
  }

  .btn-new-item {
    padding: 10px 20px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .btn-new-item:hover {
    background: #764ba2;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 32px;
  }

  .stat-card {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
  }

  .stat-card__label {
    font-size: 13px;
    color: #666;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .stat-card__value {
    font-size: 36px;
    font-weight: 700;
    color: #333;
    margin-bottom: 8px;
  }

  .stat-card__link {
    font-size: 12px;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
  }

  .stat-card__link:hover {
    color: #764ba2;
  }

  .quick-actions {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16px;
    margin-bottom: 32px;
  }

  .action-card {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .action-card:hover {
    border-color: #667eea;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .action-card__icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    color: #667eea;
  }

  .action-card__title {
    font-size: 15px;
    font-weight: 600;
    color: #333;
    margin-bottom: 4px;
  }

  .action-card__subtitle {
    font-size: 12px;
    color: #999;
  }

  .recent-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .recent-card {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 24px;
  }

  .recent-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 2px solid #f0f0f0;
  }

  .recent-card__title {
    font-size: 16px;
    font-weight: 700;
    color: #333;
    margin: 0;
  }

  .recent-card__link {
    font-size: 13px;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
  }

  .recent-card__link:hover {
    color: #764ba2;
  }

  .recent-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .recent-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: #f8f9fa;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .recent-item:hover {
    background: #e9ecef;
  }

  .recent-item__content {
    flex: 1;
  }

  .recent-item__title {
    font-size: 14px;
    font-weight: 600;
    color: #333;
    margin-bottom: 4px;
  }

  .recent-item__meta {
    font-size: 12px;
    color: #666;
  }

  .recent-item__action {
    padding: 6px 16px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
  }

  .recent-item__action:hover {
    background: #764ba2;
  }

  .empty-state {
    text-align: center;
    padding: 40px 20px;
    color: #999;
  }

  @media (max-width: 1200px) {
    .stats-grid,
    .quick-actions {
      grid-template-columns: repeat(2, 1fr);
    }

    .recent-section {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .stats-grid,
    .quick-actions {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="portal-card">
  <!-- 헤더 -->
  <div class="dashboard-header">
    <h2 style="margin: 0; font-size: 20px; font-weight: 700; color: #333;">문항 개발 대시보드</h2>
    <div class="dashboard-actions">
      <%= link_to researcher_item_create_path, class: "btn-new-item" do %>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        새 문항 등록
      <% end %>
    </div>
  </div>

  <!-- 통계 카드 -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-card__label">전체 문항</div>
      <div class="stat-card__value"><%= @total_items %></div>
      <%= link_to "문항 관리 →", researcher_items_path, class: "stat-card__link" %>
    </div>
    <div class="stat-card">
      <div class="stat-card__label">완성된 문항</div>
      <div class="stat-card__value" style="color: #667eea;"><%= @complete_items %></div>
      <%= link_to "진단지 관리 →", researcher_item_bank_path, class: "stat-card__link" %>
    </div>
    <div class="stat-card">
      <div class="stat-card__label">등록된 지문</div>
      <div class="stat-card__value" style="color: #28a745;"><%= @total_stimuli %></div>
      <%= link_to "지문 관리 →", researcher_passages_path, class: "stat-card__link" %>
    </div>
    <div class="stat-card">
      <div class="stat-card__label">활성 문항</div>
      <div class="stat-card__value" style="color: #ffc107;"><%= @active_items %></div>
      <%= link_to "활성 문항 →", researcher_items_path(status: 'active'), class: "stat-card__link" %>
    </div>
  </div>

  <!-- 빠른 액션 -->
  <h3 style="font-size: 16px; font-weight: 700; color: #333; margin-bottom: 16px;">빠른 액션</h3>
  <div class="quick-actions">
    <%= link_to new_researcher_stimulus_path, class: "action-card" do %>
      <svg class="action-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
      </svg>
      <div class="action-card__title">새 지문 등록</div>
      <div class="action-card__subtitle">지문 텍스트 입력</div>
    <% end %>
    <%= link_to researcher_item_create_path, class: "action-card" do %>
      <svg class="action-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 20h9"></path>
        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
      </svg>
      <div class="action-card__title">새 문항 개발</div>
      <div class="action-card__subtitle">MCQ/서술형 문항</div>
    <% end %>
    <%= link_to researcher_item_bank_path, class: "action-card" do %>
      <svg class="action-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="9" y1="9" x2="15" y2="9"></line>
        <line x1="9" y1="15" x2="15" y2="15"></line>
      </svg>
      <div class="action-card__title">진단지 생성 및 관리</div>
      <div class="action-card__subtitle">완성된 진단지 세트 보기</div>
    <% end %>
    <%= link_to researcher_evaluation_path, class: "action-card" do %>
      <svg class="action-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 11 12 14 22 4"></polyline>
        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
      </svg>
      <div class="action-card__title">평가 영역</div>
      <div class="action-card__subtitle">평가 지표 관리</div>
    <% end %>
  </div>

  <!-- 최근 활동 -->
  <h3 style="font-size: 16px; font-weight: 700; color: #333; margin: 32px 0 16px 0;">최근 활동</h3>
  <div class="recent-section">
    <!-- 최근 문항 -->
    <div class="recent-card">
      <div class="recent-card__header">
        <h4 class="recent-card__title">최근 생성된 문항</h4>
        <%= link_to "전체 보기 →", researcher_items_path, class: "recent-card__link" %>
      </div>
      <% if @recent_items.any? %>
        <div class="recent-list">
          <% @recent_items.each do |item| %>
            <div class="recent-item">
              <div class="recent-item__content">
                <div class="recent-item__title"><%= item.code || "##{item.id}" %></div>
                <div class="recent-item__meta">
                  <%= truncate(item.prompt, length: 50) %> • <%= item.created_at.strftime("%m/%d") %>
                </div>
              </div>
              <%= link_to "편집", edit_researcher_item_path(item), class: "recent-item__action" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>등록된 문항이 없습니다.</p>
        </div>
      <% end %>
    </div>

    <!-- 최근 지문 -->
    <div class="recent-card">
      <div class="recent-card__header">
        <h4 class="recent-card__title">최근 생성된 지문</h4>
        <%= link_to "전체 보기 →", researcher_passages_path, class: "recent-card__link" %>
      </div>
      <% if @recent_stimuli.any? %>
        <div class="recent-list">
          <% @recent_stimuli.each do |stimulus| %>
            <div class="recent-item">
              <div class="recent-item__content">
                <div class="recent-item__title"><%= truncate(stimulus.title, length: 30) %></div>
                <div class="recent-item__meta">
                  <%= stimulus.items_count || 0 %>개 문항 연결 • <%= stimulus.created_at.strftime("%m/%d") %>
                </div>
              </div>
              <%= link_to "편집", edit_researcher_stimulus_path(stimulus), class: "recent-item__action" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>등록된 지문이 없습니다.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
