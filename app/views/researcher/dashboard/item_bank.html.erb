<% content_for :portal_title do %>
  문항 은행
<% end %>
<% content_for :portal_subtitle do %>
  등록된 문항을 조회하고 필터링합니다.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :item_bank %>
<% end %>

<style>
  .filter-section {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 24px;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr auto;
    gap: 12px;
    align-items: flex-end;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
  }

  .filter-group label {
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 6px;
    color: #333;
  }

  .filter-group input,
  .filter-group select {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 13px;
  }

  .search-btn {
    padding: 10px 20px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
  }

  .search-btn:hover {
    background: #764ba2;
  }

  .stats-row {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
    font-size: 13px;
    color: #666;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
  }

  .pagination a,
  .pagination span {
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    color: #333;
  }

  .pagination a:hover {
    background: #f0f0f0;
  }

  .pagination .current {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  /* Phase 3.4.2: Cursor-based pagination styling */
  .pagination-btn {
    padding: 10px 16px;
    background: #667eea;
    color: white;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s;
  }

  .pagination-btn:hover {
    background: #764ba2;
  }

  .pagination-disabled {
    padding: 10px 16px;
    background: #f0f0f0;
    color: #ccc;
    border-radius: 4px;
    cursor: not-allowed;
    font-weight: 600;
  }

  .portal-table tbody tr {
    cursor: pointer;
    transition: background 0.2s;
  }

  .portal-table tbody tr:hover {
    background: #f8f9fa;
  }

  .portal-table tbody tr:active {
    background: #efe8fd;
  }

  .status-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .status-draft {
    background: #fff3cd;
    color: #856404;
  }

  .status-active {
    background: #d4edda;
    color: #155724;
  }

  .status-retired {
    background: #f8d7da;
    color: #721c24;
  }

  .type-badge {
    display: inline-block;
    padding: 3px 10px;
    border-radius: 3px;
    font-size: 11px;
    font-weight: 600;
  }

  .type-mcq {
    background: #e3f2fd;
    color: #1565c0;
  }

  .type-constructed {
    background: #f3e5f5;
    color: #6a1b9a;
  }

  @media (max-width: 1200px) {
    .filter-section {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="portal-card" data-controller="research-search" data-research-search-debounce-delay-value="300">
  <h2 class="portal-card-title">문항 검색 및 필터</h2>

  <!-- Phase 3.1: Search form with Stimulus controller for debounced AJAX updates -->
  <form
    method="get"
    action="<%= researcher_item_bank_path %>"
    data-research-search-target="form"
    data-turbo-stream
  >
    <div class="filter-section">
      <div class="filter-group">
        <label>문항코드/내용</label>
        <input
          type="text"
          name="search"
          placeholder="문항코드 또는 내용으로 검색..."
          value="<%= @search_query %>"
          data-research-search-target="searchInput"
          data-action="research-search#search"
          autocomplete="off"
        >
      </div>

      <div class="filter-group">
        <label>문항 유형</label>
        <select name="item_type" data-action="research-search#search">
          <option value="">모두</option>
          <% @available_item_types.each do |type| %>
            <option value="<%= type %>" <%= 'selected' if @item_type_filter == type %>>
              <%= type == 'mcq' ? '객관식' : '주관식' %>
            </option>
          <% end %>
        </select>
      </div>

      <div class="filter-group">
        <label>상태</label>
        <select name="status" data-action="research-search#search">
          <option value="">모두</option>
          <% @available_statuses.each do |status| %>
            <option value="<%= status %>" <%= 'selected' if @status_filter == status %>>
              <%= status == 'draft' ? '준비중' : (status == 'active' ? '활성' : '폐기') %>
            </option>
          <% end %>
        </select>
      </div>

      <div class="filter-group">
        <label>난이도</label>
        <select name="difficulty" data-action="research-search#search">
          <option value="">모두</option>
          <% @available_difficulties.each do |difficulty| %>
            <option value="<%= difficulty %>" <%= 'selected' if @difficulty_filter == difficulty %>>
              <%= difficulty %>
            </option>
          <% end %>
        </select>
      </div>

      <div style="display: flex; gap: 8px;">
        <button type="submit" class="search-btn">검색</button>
        <button
          type="button"
          class="search-btn hidden"
          style="background: #ccc;"
          data-research-search-target="clearButton"
          data-action="research-search#clearSearch"
        >
          지우기
        </button>
      </div>
    </div>
  </form>

  <!-- Phase 3.1: Stats section with ID for Turbo Stream updates -->
  <div id="stats" class="stats-row">
    <span>전체: <strong><%= @total_count %></strong>건</span>
    <span>페이지: <strong><%= @page %> / <%= @total_pages %></strong></span>
    <span id="result-count" class="hidden">검색: <strong data-research-search-target="resultCount">0</strong>건</span>
  </div>

  <!-- Phase 3.1: Items table with ID for Turbo Stream replacement -->
  <div id="items-table">
    <%= render "items_table" %>
  </div>
</section>
