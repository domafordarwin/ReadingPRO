<% content_for :portal_title do %>
  문항 은행
<% end %>
<% content_for :portal_subtitle do %>
  완성된 진단지 세트를 관리하세요.
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :item_bank %>
<% end %>

<!-- 완성된 진단지 세트 카드 뷰 -->
<div class="bundles-grid">
  <% @assessment_bundles.each do |bundle| %>
    <div class="bundle-card">
      <h3><%= bundle.code %></h3>
      <p><%= truncate(bundle.body, length: 150) %></p>
      <div class="stats">
        <span>객관식: <%= bundle.mcq_count %></span>
        <span>서술형: <%= bundle.constructed_count %></span>
        <span>예상시간: <%= bundle.estimated_time_minutes %>분</span>
      </div>
    </div>
  <% end %>
</div>
