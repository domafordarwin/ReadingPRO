<% content_for :portal_title do %>
  문항 관리
<% end %>
<% content_for :portal_subtitle do %>
  문항별 정답 및 루브릭 내용을 확인하고 수정할 수 있습니다
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :items %>
<% end %>

<style>
  .portal-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 0;
    margin-bottom: 24px;
  }

  .portal-card-header {
    padding: 24px 32px;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .portal-card-title {
    font-size: var(--rp-font-size-xl);
    font-weight: var(--rp-font-weight-bold);
    color: #333;
    margin: 0;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 6px;
    font-size: var(--rp-font-size-base);
    font-weight: var(--rp-font-weight-semibold);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .btn-success {
    background: #667eea;
    color: white;
  }

  .btn-success:hover {
    background: #764ba2;
  }

  .btn-primary {
    background: #667eea;
    color: white;
  }

  .btn-primary:hover {
    background: #764ba2;
  }

  .tabs {
    display: flex;
    gap: 8px;
    padding: 0 32px;
    margin-top: 20px;
    border-bottom: 2px solid #f0f0f0;
  }

  .tab {
    padding: 12px 20px;
    font-size: var(--rp-font-size-base);
    font-weight: var(--rp-font-weight-semibold);
    color: #666;
    text-decoration: none;
    border-bottom: 3px solid transparent;
    margin-bottom: -2px;
    transition: all 0.2s;
  }

  .tab.active {
    color: #667eea;
    border-bottom-color: #667eea;
  }

  .tab:hover {
    color: #667eea;
  }

  .filter-section {
    padding: 24px 32px;
    background: #f8f9fa;
    border-bottom: 1px solid #e0e0e0;
  }

  .filter-title {
    font-size: var(--rp-font-size-md);
    font-weight: var(--rp-font-weight-bold);
    color: #333;
    margin-bottom: 16px;
  }

  .filter-row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr auto auto;
    gap: 12px;
    align-items: end;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
  }

  .filter-label {
    font-size: var(--rp-font-size-sm);
    font-weight: var(--rp-font-weight-semibold);
    color: #333;
    margin-bottom: 8px;
  }

  .filter-input,
  .filter-select {
    padding: 10px 14px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: var(--rp-font-size-base);
    background: white;
  }

  .filter-input:focus,
  .filter-select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .reset-link {
    color: #666;
    text-decoration: none;
    font-size: var(--rp-font-size-base);
    padding: 10px 14px;
    font-weight: var(--rp-font-weight-semibold);
  }

  .reset-link:hover {
    color: #667eea;
  }

  .table-section {
    padding: 24px 32px;
  }

  .table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .table-title {
    font-size: var(--rp-font-size-md);
    font-weight: var(--rp-font-weight-bold);
    color: #333;
  }

  .table-count {
    font-size: var(--rp-font-size-base);
    color: #666;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    background: #f8f9fa;
  }

  .data-table th {
    padding: 12px 16px;
    text-align: left;
    font-size: var(--rp-font-size-sm);
    font-weight: var(--rp-font-weight-semibold);
    color: #666;
    border-bottom: 2px solid #e0e0e0;
  }

  .data-table td {
    padding: 16px;
    font-size: var(--rp-font-size-base);
    color: #333;
    border-bottom: 1px solid #f0f0f0;
  }

  .data-table tbody tr:hover {
    background: #f8f9fa;
  }

  .item-title {
    display: flex;
    flex-direction: column;
