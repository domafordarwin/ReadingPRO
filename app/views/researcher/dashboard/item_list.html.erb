    background: linear-gradient(135deg, #f3e8ff 0%, #e9d5ff 100%);
    color: #7c3aed;
    border: 1px solid #d8b4fe;
  }

  .badge-warning {
    background: #fff3e0;
    color: #f57c00;
  }

  .badge-success {
    background: #e8f5e9;
    color: #388e3c;
  }

  .badge-danger {
    background: #ffebee;
    color: #d32f2f;
  }

  .actions {
    display: flex;
    gap: 8px;
  }

  .action-icon {
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .action-icon-edit {
    color: #667eea;
    background: #f0f3ff;
  }

  .action-icon-edit:hover {
    background: #667eea;
    color: white;
  }

  .action-icon-view {
    color: #666;
    background: #f0f0f0;
  }

  .action-icon-view:hover {
    background: #666;
    color: white;
  }

  .action-icon-delete {
    color: #d32f2f;
    background: #ffebee;
  }

  .action-icon-delete:hover {
    background: #d32f2f;
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  /* Modal Styles */
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .modal-overlay.active {
    display: flex;
  }

  .modal-container {
    background: white;
    border-radius: 12px;
    max-width: 800px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: modalSlideIn 0.3s ease-out;
  }

