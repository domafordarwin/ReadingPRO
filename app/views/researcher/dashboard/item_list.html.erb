<% content_for :portal_title do %>
  문항 관리
<% end %>
<% content_for :portal_subtitle do %>
  문항별 정답 및 루브릭 내용을 확인하고 수정할 수 있습니다
<% end %>
<% content_for :portal_nav do %>
  <%= render "researcher/shared/nav", current: :items %>
<% end %>

<style>
  .portal-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 0;
    margin-bottom: 24px;
  }

  .portal-card-header {
    padding: 24px 32px;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .portal-card-title {
    font-size: 20px;
    font-weight: 700;
    color: #333;
    margin: 0;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .btn-success {
    background: #667eea;
    color: white;
  }

  .btn-success:hover {
    background: #764ba2;
  }

  .btn-primary {
    background: #667eea;
    color: white;
  }

  .btn-primary:hover {
    background: #764ba2;
  }

  .tabs {
    display: flex;
    gap: 8px;
    padding: 0 32px;
    margin-top: 20px;
    border-bottom: 2px solid #f0f0f0;
  }

  .tab {
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 600;
    color: #666;
    text-decoration: none;
    border-bottom: 3px solid transparent;
    margin-bottom: -2px;
    transition: all 0.2s;
  }

  .tab.active {
    color: #667eea;
    border-bottom-color: #667eea;
  }

  .tab:hover {
    color: #667eea;
  }

  .filter-section {
    padding: 24px 32px;
    background: #f8f9fa;
    border-bottom: 1px solid #e0e0e0;
  }

  .filter-title {
    font-size: 16px;
    font-weight: 700;
    color: #333;
    margin-bottom: 16px;
  }

  .filter-row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr auto auto;
    gap: 12px;
    align-items: end;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
  }

  .filter-label {
    font-size: 13px;
    font-weight: 600;
    color: #333;
    margin-bottom: 8px;
  }

  .filter-input,
  .filter-select {
    padding: 10px 14px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    background: white;
  }

  .filter-input:focus,
  .filter-select:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .reset-link {
    color: #666;
    text-decoration: none;
    font-size: 14px;
    padding: 10px 14px;
    font-weight: 600;
  }

  .reset-link:hover {
    color: #667eea;
  }

  .table-section {
    padding: 24px 32px;
  }

  .table-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .table-title {
    font-size: 16px;
    font-weight: 700;
    color: #333;
  }

  .table-count {
    font-size: 14px;
    color: #666;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
  }

  .data-table thead {
    background: #f8f9fa;
  }

  .data-table th {
    padding: 12px 16px;
    text-align: left;
    font-size: 13px;
    font-weight: 600;
    color: #666;
    border-bottom: 2px solid #e0e0e0;
  }

  .data-table td {
    padding: 16px;
    font-size: 14px;
    color: #333;
    border-bottom: 1px solid #f0f0f0;
  }

  .data-table tbody tr:hover {
    background: #f8f9fa;
  }

  .item-title {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .item-code {
    font-weight: 700;
    color: #333;
  }

  .item-description {
    font-size: 13px;
    color: #666;
    margin: 0;
  }

  .badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .badge-info {
    background: #e3f2fd;
    color: #1976d2;
  }

  .badge-warning {
    background: #fff3e0;
    color: #f57c00;
  }

  .badge-success {
    background: #e8f5e9;
    color: #388e3c;
  }

  .badge-danger {
    background: #ffebee;
    color: #d32f2f;
  }

  .actions {
    display: flex;
    gap: 8px;
  }

  .action-icon {
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .action-icon-edit {
    color: #667eea;
    background: #f0f3ff;
  }

  .action-icon-edit:hover {
    background: #667eea;
    color: white;
  }

  .action-icon-view {
    color: #666;
    background: #f0f0f0;
  }

  .action-icon-view:hover {
    background: #666;
    color: white;
  }

  .action-icon-delete {
    color: #d32f2f;
    background: #ffebee;
  }

  .action-icon-delete:hover {
    background: #d32f2f;
    color: white;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }
</style>

<div class="portal-card">
  <!-- Header -->
  <div class="portal-card-header">
    <h2 class="portal-card-title">문항 관리</h2>
    <%= link_to researcher_item_create_path, class: "btn btn-success" do %>
      + 새 문항 추가
    <% end %>
  </div>

  <!-- Status Tabs -->
  <div class="tabs">
    <%= link_to "전체", researcher_item_list_path, class: "tab#{' active' if params[:status].blank?}" %>
    <%= link_to "초안", researcher_item_list_path(status: 'draft'), class: "tab#{' active' if params[:status] == 'draft'}" %>
    <%= link_to "배포됨", researcher_item_list_path(status: 'active'), class: "tab#{' active' if params[:status] == 'active'}" %>
    <%= link_to "보관됨", researcher_item_list_path(status: 'archived'), class: "tab#{' active' if params[:status] == 'archived'}" %>
  </div>

  <!-- Filter Section -->
  <div class="filter-section">
    <h3 class="filter-title">검색 및 필터</h3>
    <%= form_with url: researcher_item_list_path, method: :get, local: true do %>
      <div class="filter-row">
        <div class="filter-group">
          <label class="filter-label">키워드</label>
          <input type="text" name="q" value="<%= params[:q] %>" placeholder="문항 코드 또는 내용" class="filter-input">
        </div>

        <div class="filter-group">
          <label class="filter-label">문항 유형</label>
          <select name="item_type" class="filter-select">
            <option value="">전체</option>
            <option value="mcq" <%= 'selected' if params[:item_type] == 'mcq' %>>객관식</option>
            <option value="constructed" <%= 'selected' if params[:item_type] == 'constructed' %>>서술형</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label">루브릭</label>
          <select name="rubric" class="filter-select">
            <option value="">전체</option>
            <option value="with" <%= 'selected' if params[:rubric] == 'with' %>>있음</option>
            <option value="without" <%= 'selected' if params[:rubric] == 'without' %>>없음</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">검색</button>
        <%= link_to "초기화", researcher_item_list_path, class: "reset-link" %>
      </div>
    <% end %>
  </div>

  <!-- Table Section -->
  <div class="table-section">
    <div class="table-header">
      <h3 class="table-title">문항 목록</h3>
      <span class="table-count">총 <%= @total_count %>건</span>
    </div>

    <% if @items.any? %>
      <table class="data-table">
        <thead>
          <tr>
            <th>제목</th>
            <th>난이도</th>
            <th>문항 유형</th>
            <th>지문</th>
            <th>상태</th>
            <th>생성일</th>
            <th>작업</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <% status_class = case item.status
                             when "draft" then "badge-warning"
                             when "active" then "badge-success"
                             when "archived" then "badge-danger"
                             else "badge-warning"
                             end %>
            <% status_label = case item.status
                             when "draft" then "초안"
                             when "active" then "배포됨"
                             when "archived" then "보관됨"
                             else "초안"
                             end %>
            <% difficulty_label = case item.difficulty
                                 when "easy" then "하"
                                 when "medium" then "중"
                                 when "hard" then "상"
                                 else "-"
                                 end %>
            <tr>
              <td>
                <div class="item-title">
                  <strong class="item-code"><%= item.code || "ITEM_#{item.id.to_s.rjust(3, '0')}" %></strong>
                  <p class="item-description"><%= truncate(item.prompt, length: 60) %></p>
                </div>
              </td>
              <td><%= difficulty_label %></td>
              <td>
                <span class="badge badge-info">
                  <%= item.item_type == "mcq" ? "객관식" : "서술형" %>
                </span>
              </td>
              <td><%= item.stimulus ? truncate(item.stimulus.title, length: 30) : "-" %></td>
              <td>
                <span class="badge <%= status_class %>">
                  <%= status_label %>
                </span>
              </td>
              <td><%= item.created_at.strftime("%Y. %m. %d.") %></td>
              <td>
                <div class="actions">
                  <%= link_to edit_researcher_item_path(item), class: "action-icon action-icon-edit", title: "편집" do %>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 20h9"></path>
                      <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                    </svg>
                  <% end %>
                  <a href="#" class="action-icon action-icon-view" title="미리보기">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                  </a>
                  <%= link_to researcher_item_path(item),
                             data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" },
                             class: "action-icon action-icon-delete",
                             title: "삭제" do %>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <p>문항이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>
