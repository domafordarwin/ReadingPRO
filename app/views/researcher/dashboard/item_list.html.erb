    flex: 1;
  }

  .modal-title {
    font-size: var(--rp-font-size-xl);
    font-weight: var(--rp-font-weight-bold);
    color: #333;
    margin: 0 0 8px 0;
  }

  .modal-meta {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
