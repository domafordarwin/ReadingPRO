</style>

<div class="portal-card">
  <!-- Header -->
  <div class="portal-card-header">
    <h2 class="portal-card-title">문항 관리</h2>
    <%= link_to researcher_item_create_path, class: "btn btn-success" do %>
      + 새 문항 추가
    <% end %>
  </div>

  <!-- Status Tabs -->
  <div class="tabs">
    <%= link_to "전체", researcher_item_list_path, class: "tab#{' active' if params[:status].blank?}" %>
    <%= link_to "초안", researcher_item_list_path(status: 'draft'), class: "tab#{' active' if params[:status] == 'draft'}" %>
    <%= link_to "배포됨", researcher_item_list_path(status: 'active'), class: "tab#{' active' if params[:status] == 'active'}" %>
    <%= link_to "보관됨", researcher_item_list_path(status: 'archived'), class: "tab#{' active' if params[:status] == 'archived'}" %>
  </div>

  <!-- Filter Section -->
  <div class="filter-section">
    <h3 class="filter-title">검색 및 필터</h3>
    <%= form_with url: researcher_item_list_path, method: :get, local: true do %>
      <div class="filter-row">
        <div class="filter-group">
          <label class="filter-label">키워드</label>
          <input type="text" name="q" value="<%= params[:q] %>" placeholder="문항 코드 또는 내용" class="filter-input">
        </div>

        <div class="filter-group">
          <label class="filter-label">문항 유형</label>
          <select name="item_type" class="filter-select">
            <option value="">전체</option>
            <option value="mcq" <%= 'selected' if params[:item_type] == 'mcq' %>>객관식</option>
            <option value="constructed" <%= 'selected' if params[:item_type] == 'constructed' %>>서술형</option>
          </select>
        </div>

        <div class="filter-group">
          <label class="filter-label">루브릭</label>
          <select name="rubric" class="filter-select">
            <option value="">전체</option>
            <option value="with" <%= 'selected' if params[:rubric] == 'with' %>>있음</option>
            <option value="without" <%= 'selected' if params[:rubric] == 'without' %>>없음</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">검색</button>
        <%= link_to "초기화", researcher_item_list_path, class: "reset-link" %>
      </div>
    <% end %>
  </div>

  <!-- Table Section -->
  <div class="table-section">
    <div class="table-header">
      <h3 class="table-title">문항 목록</h3>
      <span class="table-count">총 <%= @total_count %>건</span>
    </div>

    <% if @items.any? %>
      <table class="data-table">
        <thead>
          <tr>
            <th>제목</th>
            <th>난이도</th>
            <th>문항 유형</th>
            <th>지문</th>
            <th>상태</th>
            <th>생성일</th>
            <th>작업</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <% status_class = case item.status
                             when "draft" then "badge-warning"
                             when "active" then "badge-success"
                             when "archived" then "badge-danger"
                             else "badge-warning"
                             end %>
            <% status_label = case item.status
                             when "draft" then "초안"
                             when "active" then "배포됨"
                             when "archived" then "보관됨"
                             else "초안"
                             end %>
            <% difficulty_label = case item.difficulty
                                 when "easy" then "하"
                                 when "medium" then "중"
                                 when "hard" then "상"
                                 else "-"
                                 end %>
            <tr>
              <td>
                <div class="item-title">
                  <strong class="item-code"><%= item.code || "ITEM_#{item.id.to_s.rjust(3, '0')}" %></strong>
                  <p class="item-description"><%= truncate(strip_tags(item.prompt), length: 60) %></p>
                </div>
              </td>
              <td><%= difficulty_label %></td>
              <td>
                <span class="badge badge-item-type-<%= item.item_type %>">
                  <%= item.item_type == "mcq" ? "객관식" : "서술형" %>
                </span>
              </td>
              <td><%= item.stimulus ? truncate(item.stimulus.title, length: 30) : "-" %></td>
              <td>
                <span class="badge <%= status_class %>">
                  <%= status_label %>
                </span>
              </td>
              <td><%= item.created_at.strftime("%Y. %m. %d.") %></td>
              <td>
                <div class="actions">
                  <%= link_to edit_researcher_item_path(item), class: "action-icon action-icon-edit", title: "편집" do %>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 20h9"></path>
                      <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                    </svg>
                  <% end %>
                  <a href="#"
                     class="action-icon action-icon-view"
                     title="미리보기"
                     data-item-preview="true"
                     data-item-code="<%= item.code || "ITEM_#{item.id.to_s.rjust(3, '0')}" %>"
                     data-item-type="<%= item.item_type == 'mcq' ? '객관식' : '서술형' %>"
                     data-item-prompt="<%= item.prompt.gsub('"', '&quot;') %>"
                     data-item-difficulty="<%= difficulty_label %>"
                     data-item-stimulus="<%= item.stimulus ? item.stimulus.title.gsub('"', '&quot;') : '-' %>"
                     data-item-status="<%= status_label %>"
                     data-item-choices="<%= item.item_type == 'mcq' ? item.item_choices.map { |c| { no: c.choice_no, content: c.content, correct: c.is_correct } }.to_json.gsub('"', '&quot;') : '' %>"
                     data-item-rubric="<%= item.item_type == 'constructed' && item.rubric ? "#{item.rubric.rubric_criteria.count}개 평가 기준" : '' %>">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                  </a>
                  <%= link_to researcher_item_path(item),
                             data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" },
                             class: "action-icon action-icon-delete",
                             title: "삭제" do %>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty-state">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <p>문항이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Item Preview Modal -->
<div class="modal-overlay" id="itemPreviewModal">
  <div class="modal-container">
    <div class="modal-header">
      <div class="modal-header-left">
        <h2 class="modal-title" id="modalItemCode"></h2>
        <div class="modal-meta">
          <span class="badge" id="modalItemType"></span>
          <span class="badge badge-info" id="modalItemDifficulty"></span>
          <span class="badge" id="modalItemStatus"></span>
        </div>
      </div>
      <button class="modal-close" id="modalCloseBtn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="modal-body">
      <div class="modal-section" id="modalStimulusSection">
        <div class="modal-section-title">연결된 지문</div>
        <div class="modal-section-content" id="modalStimulus"></div>
      </div>
      <div class="modal-section">
        <div class="modal-section-title">문항 발문</div>
        <div class="modal-section-content" id="modalPrompt"></div>
      </div>
      <div class="modal-section" id="modalChoicesSection" style="display: none;">
        <div class="modal-section-title">선택지</div>
        <div class="modal-choices" id="modalChoices"></div>
      </div>
      <div class="modal-section" id="modalRubricSection" style="display: none;">
        <div class="modal-section-title">루브릭 정보</div>
        <div class="modal-section-content" id="modalRubric"></div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn btn-primary" id="modalEditBtn">편집하기</button>
    </div>
  </div>
</div>

<script>
(function() {
  const modal = document.getElementById('itemPreviewModal');
  const closeBtn = document.getElementById('modalCloseBtn');
  const editBtn = document.getElementById('modalEditBtn');
  let currentItemId = null;

  // Open modal when view button is clicked
  document.addEventListener('click', function(e) {
    const viewBtn = e.target.closest('[data-item-preview="true"]');
    if (!viewBtn) return;

    e.preventDefault();

    // Extract data from button
    const code = viewBtn.dataset.itemCode;
    const type = viewBtn.dataset.itemType;
    const prompt = viewBtn.dataset.itemPrompt;
    const difficulty = viewBtn.dataset.itemDifficulty;
    const stimulus = viewBtn.dataset.itemStimulus;
    const status = viewBtn.dataset.itemStatus;
    const choicesData = viewBtn.dataset.itemChoices;
    const rubricData = viewBtn.dataset.itemRubric;

    // Get item ID from edit link
    const editLink = viewBtn.closest('.actions').querySelector('.action-icon-edit');
    const editUrl = editLink ? editLink.getAttribute('href') : '';
    const itemIdMatch = editUrl.match(/\/items\/(\d+)\/edit/);
    currentItemId = itemIdMatch ? itemIdMatch[1] : null;

    // Populate modal
    document.getElementById('modalItemCode').textContent = code;
    document.getElementById('modalItemDifficulty').textContent = '난이도: ' + difficulty;
    document.getElementById('modalItemStatus').textContent = status;
    document.getElementById('modalPrompt').textContent = prompt;
    document.getElementById('modalStimulus').textContent = stimulus;

    // Set type badge
    const typeBadge = document.getElementById('modalItemType');
    typeBadge.textContent = type;
    typeBadge.className = 'badge badge-item-type-' + (type === '객관식' ? 'mcq' : 'constructed');

    // Set status badge class
    const statusBadge = document.getElementById('modalItemStatus');
    if (status === '초안') {
      statusBadge.className = 'badge badge-warning';
    } else if (status === '배포됨') {
      statusBadge.className = 'badge badge-success';
    } else if (status === '보관됨') {
      statusBadge.className = 'badge badge-danger';
    }

    // Handle choices (MCQ)
    const choicesSection = document.getElementById('modalChoicesSection');
    const rubricSection = document.getElementById('modalRubricSection');

    if (type === '객관식' && choicesData) {
      try {
        const choices = JSON.parse(choicesData.replace(/&quot;/g, '"'));
        const choicesContainer = document.getElementById('modalChoices');
        choicesContainer.innerHTML = '';

        choices.forEach(choice => {
          const choiceEl = document.createElement('div');
          choiceEl.className = 'modal-choice' + (choice.correct ? ' correct' : '');
          choiceEl.innerHTML = `
            <div class="modal-choice-no">${choice.no}</div>
            <div class="modal-choice-content">${choice.content}</div>
          `;
          choicesContainer.appendChild(choiceEl);
        });

        choicesSection.style.display = 'block';
        rubricSection.style.display = 'none';
      } catch (e) {
        console.error('Failed to parse choices:', e);
        choicesSection.style.display = 'none';
      }
    } else if (type === '서술형' && rubricData) {
      document.getElementById('modalRubric').textContent = rubricData;
      rubricSection.style.display = 'block';
      choicesSection.style.display = 'none';
    } else {
      choicesSection.style.display = 'none';
      rubricSection.style.display = 'none';
    }

    // Show modal
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  });

  // Close modal
  function closeModal() {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  closeBtn.addEventListener('click', closeModal);

  // Close on overlay click
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && modal.classList.contains('active')) {
      closeModal();
    }
  });

  // Edit button
  editBtn.addEventListener('click', function() {
    if (currentItemId) {
      window.location.href = '/researcher/items/' + currentItemId + '/edit';
    }
  });
})();
</script>
