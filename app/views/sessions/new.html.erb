<script>
  // CRITICAL: Disable Turbo for login form to prevent AJAX 422 errors
  // Rails 8.1 + Turbo automatically converts form submissions to AJAX
  // This causes 422 responses to not render properly
  (function() {
    'use strict';

    // Immediately prevent Turbo from hijacking the login form
    document.addEventListener('turbo:before-fetch-request', function(e) {
      const form = e.target;
      if (form && form.classList && form.classList.contains('login-form-new')) {
        console.log('[LoginForm] Turbo fetch request prevented for login form');
        e.preventDefault(); // Block Turbo AJAX request
      }
    }, true);

    // Additional safety: listen for form submission in capture phase
    document.addEventListener('submit', function(e) {
      const form = e.target;
      if (form && form.classList && form.classList.contains('login-form-new')) {
        console.log('[LoginForm] Standard form submission (non-AJAX)');
        // Let the standard form submission proceed
        // Do NOT call e.preventDefault() here
      }
    }, true);
  })();

  function updatePlaceholder(userType) {
    const emailInput = document.getElementById('email');
    const typeTexts = {
      student: 'example@school.com',
      parent: 'example@school.com',
      school_teacher: 'teacher@school.com',
      diagnostic_teacher: 'teacher@school.com',
      researcher: 'researcher@school.com',
      admin: 'admin@school.com'
    };
    emailInput.placeholder = typeTexts[userType] || 'example@school.com';
  }

  function togglePassword() {
    const passwordInput = document.getElementById('password');
    const isPassword = passwordInput.type === 'password';
    passwordInput.type = isPassword ? 'text' : 'password';
  }

  document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.querySelector('.login-form-new');
    const submitButton = document.querySelector('.login-button-new');

    let isSubmitting = false;
    const originalButtonText = submitButton.textContent;

    // Handle form submission to prevent double-submit
    loginForm.addEventListener('submit', function(e) {
      if (isSubmitting) {
        e.preventDefault();
        return false;
      }

      isSubmitting = true;
      submitButton.disabled = true;
      submitButton.textContent = 'ë¡œê·¸ì¸ ì¤‘...';
      submitButton.style.opacity = '0.7';
      submitButton.style.cursor = 'not-allowed';
    });

    // Reset state if form submission fails (page re-renders with error)
    window.addEventListener('pageshow', function() {
      if (isSubmitting) {
        isSubmitting = false;
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
        submitButton.style.opacity = '1';
        submitButton.style.cursor = 'pointer';
      }
    });
  });
</script>
