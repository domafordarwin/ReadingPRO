<script>
  // Prevent Turbo from intercepting the login form
  document.addEventListener('turbo:submit', (e) => {
    if (e.target.classList.contains('login-form-new')) {
      e.preventDefault();
      e.target.submit();
    }
  }, true);

  function updatePlaceholder(userType) {
    const emailInput = document.getElementById('email');
    const typeTexts = {
      student: 'example@school.com',
      parent: 'example@school.com',
      school_teacher: 'teacher@school.com',
      diagnostic_teacher: 'teacher@school.com',
      researcher: 'researcher@school.com',
      admin: 'admin@school.com'
    };
    emailInput.placeholder = typeTexts[userType] || 'example@school.com';
  }

  function togglePassword() {
    const passwordInput = document.getElementById('password');
    const isPassword = passwordInput.type === 'password';
    passwordInput.type = isPassword ? 'text' : 'password';
  }

  document.addEventListener('DOMContentLoaded', function() {
    const testButtons = document.querySelectorAll('.login-test-btn');
    const emailInput = document.getElementById('email');
    const userTypeSelect = document.getElementById('user_type');
    const passwordInput = document.getElementById('password');

    testButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        emailInput.value = button.dataset.username || '';
        userTypeSelect.value = button.dataset.usertype || 'student';
        passwordInput.value = 'ReadingPro$12#';
        updatePlaceholder(userTypeSelect.value);

        // Auto-submit the form after populating test credentials
        setTimeout(() => {
          document.querySelector('.login-form-new').submit();
        }, 50);
      });
    });
  });
</script>
