<%# Toast Notification Container %>

<div id="toast-container"
     class="rp-toast-container"
     data-controller="toast"
     data-toast-target="container"
     aria-live="polite"
     aria-atomic="false">
</div>

<!-- Screen reader announcer for dismissals -->
<div id="toast-announcer"
     class="sr-only"
     aria-live="polite"
     aria-atomic="true">
</div>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
