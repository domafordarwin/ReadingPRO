<aside class="rp-sidebar" id="sidebar">
  <div class="rp-sidebar__content">
    <% visible_groups.each do |group_key| %>
      <% group = menu_groups[group_key] %>
      <% next unless group %>

      <nav class="rp-nav-group">
        <div class="rp-nav-group__label"><%= group[:label] %></div>

        <% group[:items].each do |item| %>
          <% is_active = (current_page.to_s == item[:id].to_s) %>
          <% item_path = current_paths[item[:id]] || "#" %>
          <a href="<%= item_path %>" class="rp-nav-item<%= ' rp-nav-item--active' if is_active %>">
            <%= render_icon(item[:icon], size: 18) rescue nil %>
            <span><%= item[:label] %></span>
          </a>
        <% end %>
      </nav>
    <% end %>
  </div>

  <div class="rp-sidebar__footer">
    <a href="#" class="rp-nav-item">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M12 16v-4M12 8h.01"></path>
      </svg>
      <span>도움말</span>
    </a>
  </div>
</aside>

