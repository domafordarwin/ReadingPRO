<div class="rp-dashboard-container">
  <div class="rp-dashboard-header">
    <div class="rp-header-content">
      <h1>알림</h1>
      <p class="rp-subtitle">
        읽지 않은 알림: <strong><%= @unread_count %></strong>개
      </p>
    </div>
    <% if @unread_count > 0 %>
      <div class="rp-header-actions">
        <%= button_to "모두 읽음 처리", mark_all_as_read_notifications_path,
                      method: :patch, class: "rp-btn rp-btn-secondary" %>
      </div>
    <% end %>
  </div>

  <!-- 알림 목록 -->
  <div class="rp-section">
    <% if @notifications.any? %>
      <div class="rp-notification-list">
        <% @notifications.each do |notification| %>
          <div class="rp-notification-item <%= 'unread' if notification.unread? %>">
            <div class="rp-notification-content">
              <div class="rp-notification-type">
                <span class="rp-badge rp-badge-info">
                  <%= notification.type_label %>
                </span>
              </div>
              <div class="rp-notification-message">
                <%= notification.message %>
              </div>
              <div class="rp-notification-time">
                <%= time_ago_in_words(notification.created_at) %>
              </div>
            </div>

            <div class="rp-notification-actions">
              <% if notification.unread? %>
                <%= button_to "읽음", mark_as_read_notification_path(notification),
                              method: :patch, class: "rp-btn rp-btn-small" %>
              <% end %>
              <%= link_to "보기", notification_path(notification), class: "rp-btn rp-btn-small rp-btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 페이지네이션 -->
      <div class="rp-pagination">
        <% if @notifications.first_page? %>
          <span class="rp-pagination-btn disabled">처음</span>
          <span class="rp-pagination-btn disabled">이전</span>
        <% else %>
          <%= link_to "처음", notifications_path(page: 1), class: "rp-pagination-btn" %>
          <%= link_to "이전", notifications_path(page: @notifications.prev_page), class: "rp-pagination-btn" %>
        <% end %>

        <% (1..@notifications.total_pages).each do |page| %>
          <% if page == @notifications.current_page %>
            <span class="rp-pagination-btn active"><%= page %></span>
          <% else %>
            <%= link_to page, notifications_path(page: page), class: "rp-pagination-btn" %>
          <% end %>
        <% end %>

        <% if @notifications.last_page? %>
          <span class="rp-pagination-btn disabled">다음</span>
          <span class="rp-pagination-btn disabled">마지막</span>
        <% else %>
          <%= link_to "다음", notifications_path(page: @notifications.next_page), class: "rp-pagination-btn" %>
          <%= link_to "마지막", notifications_path(page: @notifications.total_pages), class: "rp-pagination-btn" %>
        <% end %>
      </div>
    <% else %>
      <div class="rp-empty-state">
        <p>알림이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>

<style>
  .rp-notification-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .rp-notification-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 16px;
    background: #f9f9f9;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 16px;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .rp-notification-item.unread {
    background: #e3f2fd;
    border-color: #1976d2;
  }

  .rp-notification-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .rp-notification-type {
    display: flex;
    gap: 8px;
  }

  .rp-notification-message {
    font-size: var(--rp-font-size-md);
    color: #333;
    line-height: 1.5;
  }

  .rp-notification-time {
    font-size: var(--rp-font-size-xs);
    color: #999;
  }

  .rp-notification-actions {
    display: flex;
    gap: 8px;
    flex-shrink: 0;
  }

  .rp-empty-state {
    text-align: center;
    padding: 48px 24px;
    color: #999;
    font-size: var(--rp-font-size-md);
  }
</style>
