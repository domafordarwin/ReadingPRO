<%= form_with model: [:admin, @stimulus], local: true do |form| %>
  <% if @stimulus.errors.any? %>
    <div class="admin-card">
      <% @stimulus.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="admin-card">
    <div class="admin-form">
      <div>
        <%= form.label :code, "지문 코드" %>
        <%= form.text_field :code, class: "admin-input small" %>
      </div>
      <div>
        <%= form.label :title, "지문 제목" %>
        <%= form.text_field :title, class: "admin-input" %>
      </div>
    </div>

    <div class="admin-divider"></div>

    <div>
      <%= form.label :body, "지문 내용" %>
      <%= form.text_area :body, class: "admin-textarea" %>
    </div>

    <div class="admin-actions">
      <%= form.submit "저장", class: "admin-button primary" %>
      <%= link_to "목록", admin_stimuli_path, class: "admin-button" %>
    </div>
  </div>
<% end %>
