<% content_for :page_title, "랜딩 페이지 알림 관리" %>

<div class="rp-page-header">
  <div>
    <h1 class="rp-page-title">랜딩 페이지 알림 관리</h1>
    <p class="rp-page-subtitle">랜딩 페이지 상단에 표시되는 알림을 관리합니다</p>
  </div>
  <div>
    <%= link_to new_admin_announcement_path, class: "rp-btn rp-btn--primary" do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="12" y1="5" x2="12" y2="19"></line>
        <line x1="5" y1="12" x2="19" y2="12"></line>
      </svg>
      새 알림 추가
    <% end %>
  </div>
</div>

<div class="rp-card">
  <div class="rp-card__header">
    <h2 class="rp-card__title">알림 목록</h2>
    <p class="rp-card__description">총 <%= @announcements.count %>개의 알림</p>
  </div>

  <div class="rp-table-container">
    <table class="rp-table">
      <thead>
        <tr>
          <th style="width: 80px;">순서</th>
          <th>내용</th>
          <th style="width: 200px;">링크</th>
          <th style="width: 100px;">상태</th>
          <th style="width: 180px;">작업</th>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= announcement.display_order %></td>
            <td><%= truncate(announcement.content, length: 100) %></td>
            <td>
              <% if announcement.link_url.present? %>
                <%= link_to announcement.link_text || "링크", announcement.link_url, target: "_blank", class: "rp-link" %>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% if announcement.active %>
                <span class="rp-status rp-status--active">활성</span>
              <% else %>
                <span class="rp-status rp-status--inactive">비활성</span>
              <% end %>
            </td>
            <td>
              <div class="rp-action-buttons">
                <%= button_to toggle_active_admin_announcement_path(announcement),
                    method: :patch,
                    class: "rp-btn rp-btn--sm #{announcement.active ? 'rp-btn--warning' : 'rp-btn--success'}" do %>
                  <%= announcement.active ? '비활성화' : '활성화' %>
                <% end %>
                <%= link_to "수정", edit_admin_announcement_path(announcement), class: "rp-btn rp-btn--sm rp-btn--secondary" %>
                <%= button_to "삭제", admin_announcement_path(announcement),
                    method: :delete,
                    class: "rp-btn rp-btn--sm rp-btn--danger",
                    data: { turbo_confirm: "정말 삭제하시겠습니까?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<style>
  .rp-link {
    color: #2563eb;
    text-decoration: underline;
  }

  .rp-link:hover {
    color: #1e40af;
  }

  .rp-btn--warning {
    background-color: #fbbf24;
    color: #78350f;
  }

  .rp-btn--warning:hover {
    background-color: #f59e0b;
  }

  .rp-btn--success {
    background-color: #10b981;
    color: white;
  }

  .rp-btn--success:hover {
    background-color: #059669;
  }
</style>
