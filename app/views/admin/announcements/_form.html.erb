<%= form_with model: [:admin, announcement], class: "rp-form" do |f| %>
  <% if announcement.errors.any? %>
    <div class="rp-alert rp-alert--error">
      <strong><%= pluralize(announcement.errors.count, "개의 오류") %>가 발생했습니다:</strong>
      <ul>
        <% announcement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rp-form-group">
    <%= f.label :content, "알림 내용", class: "rp-form-label" %>
    <%= f.text_area :content, class: "rp-form-textarea", rows: 3, placeholder: "랜딩 페이지에 표시될 알림 내용을 입력하세요", required: true %>
    <small class="rp-form-hint">짧고 명확하게 작성하세요 (권장: 100자 이내)</small>
  </div>

  <div class="rp-form-row">
    <div class="rp-form-group">
      <%= f.label :link_url, "링크 URL (선택)", class: "rp-form-label" %>
      <%= f.text_field :link_url, class: "rp-form-input", placeholder: "https://example.com" %>
      <small class="rp-form-hint">알림 클릭 시 이동할 페이지</small>
    </div>

    <div class="rp-form-group">
      <%= f.label :link_text, "링크 텍스트 (선택)", class: "rp-form-label" %>
      <%= f.text_field :link_text, class: "rp-form-input", placeholder: "자세히 보기" %>
      <small class="rp-form-hint">링크 URL이 있을 때 표시될 텍스트</small>
    </div>
  </div>

  <div class="rp-form-row">
    <div class="rp-form-group">
      <%= f.label :display_order, "표시 순서", class: "rp-form-label" %>
      <%= f.number_field :display_order, class: "rp-form-input", min: 0, required: true %>
      <small class="rp-form-hint">낮은 숫자가 먼저 표시됩니다</small>
    </div>

    <div class="rp-form-group">
      <%= f.label :active, "상태", class: "rp-form-label" %>
      <div style="padding-top: 10px;">
        <label class="rp-checkbox-label">
          <%= f.check_box :active, class: "rp-checkbox" %>
          <span>활성화 (랜딩 페이지에 표시)</span>
        </label>
      </div>
    </div>
  </div>

  <div class="rp-form-actions">
    <%= link_to "취소", admin_announcements_path, class: "rp-btn rp-btn--secondary" %>
    <%= f.submit announcement.new_record? ? "알림 생성" : "알림 수정", class: "rp-btn rp-btn--primary" %>
  </div>
<% end %>
