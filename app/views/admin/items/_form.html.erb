<%= form_with model: [:admin, @item], local: true do |form| %>
  <% if @item.errors.any? %>
    <div>
      <p>There were issues saving this item:</p>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div>
    <%= form.label :item_type %>
    <%= form.select :item_type, Item.item_types.keys %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Item.statuses.keys %>
  </div>

  <div>
    <%= form.label :difficulty %>
    <%= form.text_field :difficulty %>
  </div>

  <div>
    <%= form.label :prompt %>
    <%= form.text_area :prompt, rows: 4 %>
  </div>

  <div>
    <%= form.label :explanation %>
    <%= form.text_area :explanation, rows: 3 %>
  </div>

  <div>
    <%= form.label :stimulus_id %>
    <%= form.number_field :stimulus_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
