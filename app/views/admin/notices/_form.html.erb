<%= form_with model: [:admin, notice], class: "rp-form" do |f| %>
  <% if notice.errors.any? %>
    <div class="rp-alert rp-alert--error">
      <strong><%= pluralize(notice.errors.count, "개의 오류") %>가 발생했습니다:</strong>
      <ul>
        <% notice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="rp-form-group">
    <%= f.label :title, "제목", class: "rp-form-label" %>
    <%= f.text_field :title, class: "rp-form-input", placeholder: "공지사항 제목을 입력하세요", required: true %>
  </div>

  <div class="rp-form-group">
    <%= f.label :content, "내용", class: "rp-form-label" %>
    <%= f.text_area :content, class: "rp-form-textarea", rows: 10, placeholder: "공지사항 내용을 입력하세요", required: true %>
  </div>

  <div class="rp-form-row">
    <div class="rp-form-group">
      <%= f.label :target_roles, "대상 역할", class: "rp-form-label" %>
      <div class="rp-checkbox-group">
        <% Notice::TARGET_ROLES.each do |role| %>
          <label class="rp-checkbox-label">
            <%= check_box_tag "notice[target_roles][]", role,
                notice.target_roles&.include?(role),
                class: "rp-checkbox",
                id: "notice_target_roles_#{role}" %>
            <span><%= role_label(role) %></span>
          </label>
        <% end %>
      </div>
    </div>
  </div>

  <div class="rp-form-row">
    <div class="rp-form-group">
      <%= f.label :published_at, "게시 시작일", class: "rp-form-label" %>
      <%= f.datetime_local_field :published_at, class: "rp-form-input", required: true %>
    </div>

    <div class="rp-form-group">
      <%= f.label :expires_at, "게시 종료일 (선택)", class: "rp-form-label" %>
      <%= f.datetime_local_field :expires_at, class: "rp-form-input" %>
      <small class="rp-form-hint">비워두면 무제한 게시됩니다</small>
    </div>
  </div>

  <div class="rp-form-group">
    <label class="rp-checkbox-label rp-checkbox-label--block">
      <%= f.check_box :important, class: "rp-checkbox" %>
      <span>중요 공지사항으로 표시</span>
    </label>
    <small class="rp-form-hint">중요 공지사항은 상단에 고정 표시됩니다</small>
  </div>

  <div class="rp-form-actions">
    <%= link_to "취소", admin_notices_path, class: "rp-btn rp-btn--secondary" %>
    <%= f.submit notice.new_record? ? "공지사항 생성" : "공지사항 수정", class: "rp-btn rp-btn--primary" %>
  </div>
<% end %>

<style>
  .rp-form {
    max-width: 800px;
  }

  .rp-form-group {
    margin-bottom: 20px;
  }

  .rp-form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .rp-form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: var(--rp-font-weight-semibold);
    color: #374151;
    font-size: var(--rp-font-size-sm);
  }

  .rp-form-input,
  .rp-form-select,
  .rp-form-textarea {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-size: var(--rp-font-size-sm);
    transition: all 0.2s;
  }

  .rp-form-input:focus,
  .rp-form-select:focus,
  .rp-form-textarea:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .rp-form-textarea {
    font-family: inherit;
    resize: vertical;
  }

  .rp-form-hint {
    display: block;
    margin-top: 4px;
    font-size: var(--rp-font-size-xs);
    color: #6b7280;
  }

  .rp-checkbox-group {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 12px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    background-color: #f9fafb;
  }

  .rp-checkbox-label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    font-size: var(--rp-font-size-sm);
    color: #374151;
  }

  .rp-checkbox-label--block {
    margin-bottom: 4px;
  }

  .rp-checkbox {
    width: 16px;
    height: 16px;
    cursor: pointer;
  }

  .rp-form-actions {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
    margin-top: 32px;
    padding-top: 32px;
    border-top: 1px solid #e5e7eb;
  }

  .rp-alert {
    padding: 16px;
    border-radius: 8px;
    margin-bottom: 24px;
  }

  .rp-alert--error {
    background-color: #fee2e2;
    border: 1px solid #fecaca;
    color: #991b1b;
  }

  .rp-alert ul {
    margin: 8px 0 0 0;
    padding-left: 20px;
  }

  .rp-alert li {
    margin-top: 4px;
  }

  @media (max-width: 768px) {
    .rp-form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
