<aside class="rp-sidebar" id="sidebar">
  <div class="rp-sidebar__content">
    <% visible_groups.each do |group_key| %>
      <% group = menu_groups[group_key] %>
      <% next unless group %>

      <nav class="rp-nav-group">
        <div class="rp-nav-group__label"><%= group[:label] %></div>

        <% group[:items].each do |item| %>
          <% is_active = (current_page.to_s == item[:id].to_s) || item[:children]&.any? { |child| current_page.to_s == child[:id].to_s } %>
          <% item_path = current_paths[item[:id]] || "#" %>

          <% if item[:hasSubmenu] %>
            <div class="rp-nav-item-group">
              <button class="rp-nav-item rp-nav-item--parent<%= ' rp-nav-item--active' if is_active %>" data-toggle-submenu>
                <%= render_icon(item[:icon], size: 18) rescue nil %>
                <span><%= item[:label] %></span>
                <svg class="rp-nav-item__chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </button>

              <div class="rp-nav-submenu<%= ' rp-nav-submenu--open' if is_active %>">
                <% item[:children].each do |child| %>
                  <% child_is_active = (current_page.to_s == child[:id].to_s) %>
                  <% child_path = current_paths[child[:id]] || "#" %>
                  <a href="<%= child_path %>" class="rp-nav-subitem<%= ' rp-nav-subitem--active' if child_is_active %>">
                    <%= render_icon(child[:icon], size: 16) rescue nil %>
                    <span><%= child[:label] %></span>
                  </a>
                <% end %>
              </div>
            </div>
          <% else %>
            <a href="<%= item_path %>" class="rp-nav-item<%= ' rp-nav-item--active' if is_active %>">
              <%= render_icon(item[:icon], size: 18) rescue nil %>
              <span><%= item[:label] %></span>
            </a>
          <% end %>
        <% end %>
      </nav>
    <% end %>
  </div>

  <div class="rp-sidebar__footer">
    <a href="#" class="rp-nav-item">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M12 16v-4M12 8h.01"></path>
      </svg>
      <span>도움말</span>
    </a>
  </div>
</aside>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButtons = document.querySelectorAll('[data-toggle-submenu]');

    toggleButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const submenu = this.nextElementSibling;
        const isOpen = submenu.classList.contains('rp-nav-submenu--open');

        // Close all other submenus
        document.querySelectorAll('.rp-nav-submenu--open').forEach(menu => {
          if (menu !== submenu) {
            menu.classList.remove('rp-nav-submenu--open');
            menu.previousElementSibling.classList.remove('rp-nav-item--active');
          }
        });

        // Toggle current submenu
        submenu.classList.toggle('rp-nav-submenu--open');
        this.classList.toggle('rp-nav-item--active');
      });
    });
  });
</script>

